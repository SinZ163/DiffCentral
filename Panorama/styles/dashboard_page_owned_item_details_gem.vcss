.GemIconOverlay
{
	width: 100%;
	height: 100%;
}

.GemContainer
{
	width: 100%;
	min-height: 54px;
	background-color: #15191C;
	margin: 0px;
	margin-bottom: 2px;
}

.GemIconContainer
{
    margin-left: 4px;
    vertical-align: center;
}

#GemIconImage
{
	width: 100%;
	height: 100%;
    visibility: collapse;
}

.GemContainer.HasGem #GemIconImage
{
    visibility: visible;
}

.EmptyGemIconImage
{
	width: 100%;
	height: 100%;
    visibility: visible;
}

.GemContainer.HasGem .EmptyGemIconImage
{
    visibility: collapse;
}

#GemPanel
{
	flow-children: down;
	margin-left: 16px;
	margin-right: 16px;
}

#GemList
{
	flow-children: down;
}

.GemDetails
{
	margin-top: 0px;
}

#GemCount
{
	margin-right: 6px;
	color: white;
	font-size: 18px;
}

#GemCount.Empty
{
    visibility: collapse;
}

.GemIcon
{
    width: height-percentage( 177.77% );
	height: 52px;
	margin-right: 4px;
	opacity-mask: url("s2r://panorama/images/masks/gem_overlay_mask_psd.vtex") 1.0;
}

.GemName
{
    margin-top: 5px;
}

.GemType
{
}

.GemType Label
{
	text-transform: uppercase;
	letter-spacing: 1px;
	font-size: 12px;
	color: #666666;
}

/* Logic showing tooltip icons */
.GemContainer .InfoIcon
{
	horizontal-align: right;
	margin-right: 272px;
	wash-color: #919294;
    visibility: collapse;
}

.GemContainer.FullSocket.ResetEnabled .InfoIcon.ExtractAndReset
{
    visibility: visible;
}

.GemContainer.FullSocket .InfoIcon.Extract
{
    visibility: visible;
}

.GemContainer.FullSocket.RareGemSocket .InfoIcon.Extract
{
    visibility: collapse;
}

.GemContainer.FullSocket.ResetEnabled .InfoIcon.Extract
{
    visibility: collapse;
}

.GemContainer.FullSocket.RareGemSocket:enabled .InfoIcon.Replace
{
    visibility: visible;
}

.GemControls
{
    flow-children: right;
    horizontal-align: right;
    vertical-align: center;
}

/* All gem controls are not visible by default */
.GemContainer Button
{
    visibility: collapse;
}

/* Add Gem only visible when the socket is empty */
.GemContainer.EmptySocket:not(.GemContainer.InPurgatory) #AddGem
{
    visibility: visible;    
}

.GemContainer.RareGemSocket.FullSocket:not(.GemContainer.InPurgatory) #ReplaceGem
{
    visibility: visible;    
}

/* Extract Gem only visible when the socket is full and reset is not enabled */
.GemContainer.FullSocket:not(.GemContainer.InPurgatory) #ExtractGem
{
    visibility: visible;    
}
   
.GemContainer.FullSocket.ResetEnabled:not(.GemContainer.InPurgatory) #ExtractGem
{
    visibility: collapse;    
}
        
.GemContainer.FullSocket.RareGemSocket:not(.GemContainer.InPurgatory) #ExtractGem
{
    visibility: collapse;    
}
 
/* Small version of Extract Gem only visible when the socket is full and reset is enabled */
.GemContainer.FullSocket:not(.GemContainer.InPurgatory) #ExtractGemShort
{
    visibility: collapse;    
}

.GemContainer.FullSocket.ResetEnabled:not(.GemContainer.InPurgatory) #ExtractGemShort
{
    visibility: visible;    
}

/* ResetEnabled Gem only visible when the socket is full and reset is enabled */
.GemContainer.FullSocket.ResetEnabled:not(.GemContainer.InPurgatory) #ResetGem
{
    visibility: visible;    
}

.GemContainer.InPurgatory .UnavailableButton
{
    visibility: visible;
}

.GemContainer .ButtonBevel
{
	vertical-align: top;
	horizontal-align: right;
	margin: 9px;
	width: 246px;

	background-color: gradient( linear, 0% 0%, 0% 100%, from( #2B3D53 ), to( #3B5A6F ) );
	
	border-top-color: #2F4E63;
	border-left-color: #2B4A5F;
	border-bottom-color: #244358;
	border-right-color: #1C3B50;
}

.GemContainer:disabled .ButtonBevel
{
	wash-color: #999999;
	saturation: 0;
}
               
.GemContainer .ButtonBevel.HalfSizeButton 
{
	min-width: 119px;
	width: 119px;
    margin-left: 0px;
}

.GemContainer:enabled .ButtonBevel:hover
{
	background-color: gradient( linear, 0% 0%, 0% 100%, from( #3B5B86 ), to( #5B92BF ) );
}

.GemContainer .ButtonBevel:active
{
	background-color: gradient( linear, 0% 0%, 0% 100%, from( #3B5A6F), to( #2B3D53 ) );

	border-top-color: #222222;
	border-left-color: #303030;
	border-bottom-color: #3B5B86;
	border-right-color: #3B5B86;
}


.GemContainer .ButtonBevel.ModCharge
{
	background-color: gradient( linear, 0% 0%, 0% 100%, from( #224B39 ), to( #3B6454 ) );

	border-top-color: #335C4A;
	border-left-color: #2D5644;
	border-bottom-color: #214A38;
	border-right-color: #224937;
}

.GemContainer:enabled .ButtonBevel.ModCharge:hover
{
	background-color: gradient( linear, 0% 0%, 0% 100%, from( #2F805B ), to( #5FBA94 ) );
}


.GemContainer .ButtonBevel.ModCharge:active
{
	background-color: gradient( linear, 0% 0%, 0% 100%, from( #3B6454 ), to( #224B39 ) );

	border-top-color: #222222;
	border-left-color: #303030;
	border-bottom-color: #3B5B86;
	border-right-color: #3B5B86;
}

.GemContainer .ButtonBevel:disabled:hover
{
	background-color: gradient( linear, 0% 0%, 0% 100%, from( #2B3D53 ), to( #3B5A6F ) );
}
