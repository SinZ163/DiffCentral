
DOTASpectatorLobbyCreate
{
	flow-children: down;
	padding: 16px;
	background-color: #000c;

	width: 100%;
	height: 100%;
}

.Title
{
	text-transform: uppercase;
	color: white;
	font-size: 64px;
	margin-bottom: 8px;
}

.CreateLobbyButton
{
	flow-children: down;
	width: 100%;
	border: 2px solid #5e686966;
	padding: 8px;
	background-color: gradient( linear, 0% 0%, 0% 100%, from( #292e2e ), to( #191e1e ) );

	margin-bottom: 20px;
}

.CreateLobbyButton:hover
{
	brightness: 2.0;
}

.CreateLobbyButton:active
{
	brightness: 1.5;
}

.ButtonTitle
{
	text-transform: uppercase;
	color: white;
	font-size: 40px;
}

.ButtonDescription
{
	color: #888;
	font-size: 30px;
}
