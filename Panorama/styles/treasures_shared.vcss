#OwnedTreasuresCount
{
	background-color: #3c6269cc;
	flow-children: down;
}

.OwnedTreasuresCountContents
{
	horizontal-align: center;
	vertical-align: middle;
	flow-children: down;
}

.OwnedTreasuresCountRow
{
	flow-children: right;
	horizontal-align: center;
}

#OwnedTreasuresIcon
{
	width: 30px;
	height: 30px;
	margin-left: 1px;
	margin-top: 8px;
	vertical-align: middle;

	background-image: url("s2r://panorama/images/icon_treasure_button_png.vtex");
	background-repeat: no-repeat;
	background-position: center;
	background-size: contain;
}

.OwnedTreasuresCountRow Label
{
	color: white;
	font-size: 26px;
	vertical-align: middle;
	margin-left: 9px;
	margin-top: 10px;
	padding-bottom: -4px;
}

#OwnedTreasuresLabel
{
	color: white;
	horizontal-align: center;
	text-transform: uppercase;
	font-size: 14px;
	margin-bottom: 9px;
	margin-left: 1px;
	letter-spacing: 1px;
}

/* Seasons */
#TreasureSeasonLabel
{
	font-size: 14px;
	letter-spacing: 1px;
	text-transform: uppercase;
	padding: 4px 8px 1px 8px;
}

.TreasureSeasonGradient
{
	width: 100%;
	height: 100%;
	background-color: gradient( linear, 0% 0%, 100% 0%, from( #00000000 ), to( #000000cc ));
}

.ShowSeason.Season_International2014 #TreasureSeasonLabel,
.ShowSeason.Season_International2014 .TreasureSeasonBar
{
	background-color: #6b4189;
	color: white;
}

.ShowSeason.Season_International2015 #TreasureSeasonLabel,
.ShowSeason.Season_International2015 .TreasureSeasonBar
{
	background-color: #e5cb76;
	color: black;
}

.ShowSeason.Season_FallMajor2015 #TreasureSeasonLabel,
.ShowSeason.Season_FallMajor2015 .TreasureSeasonBar
{
	background-color: #c3d563;
	color: black;
}