/* styles for the purchase button */

/* These are where the purchase buttons start */
/* They are off by default, but we activate them if they can be purchased */
.PurchaseItemButton
{
	vertical-align: center;
	flow-children: right;

	border-top: 1px solid #ffffff22;
	border-left: 1px solid #ffffff11;
	border-right: 1px solid #00000044;
	border-bottom: 1px solid #00000088;
	padding: 5px 14px 3px 14px;
	min-width: 188px;
	height: 39px;
	
	transition-property: background-color;
	transition-duration: .1s;
}

.Purchase
{
	background-color: gradient( linear, 0% 0%, 0% 100%, from( #60862d ), to( #3d5f1c ));
}

.Purchase:hover
{
	background-color: gradient( linear, 0% 0%, 0% 100%, from( #80b33c ), to( #649c2e ));
}

.Purchase:active
{
	brightness: 1.5;
}

.Purchase:disabled
{
	background-color: gradient( linear, 0% 0%, 0% 100%, from( #646666 ), to( #646666 ) );
}

.Purchase:disabled:hover
{
	background-color: gradient( linear, 0% 0%, 0% 100%, from( #646666 ), to( #646666 ) );
}

.Purchase:disabled:active
{
	background-color: gradient( linear, 0% 0%, 0% 100%, from( #646666 ), to( #646666 ) );
}

PurchaseButton.OnMarket .PurchaseItemButton
{
   	min-width: 170px;
}

PurchaseButton.OnMarket .Purchase
{
    background-color: gradient( linear, 0% 0%, 0% 100%, from( #307663 ), to( #245a4b ));
}

PurchaseButton.OnMarket .Purchase:hover
{
	background-color: gradient( linear, 0% 0%, 0% 100%, from( #0a9163 ), to( #096449 ));
}

.PurchaseItemButton Label 
{
	vertical-align: center;
	font-size: 22px;
    text-transform: uppercase;
}

.Purchase Label
{
    horizontal-align: right;
}

.MarketButtonLabel
{
	horizontal-align: center;
	vertical-align: center;
	visibility: collapse;
	margin-right: 10px;
	color: #FFFFFFFF;
}

PurchaseButton.OnMarket .MarketButtonLabel 
{
	visibility: visible;
}

.PurchaseButtonLabel
{
	margin-right: 10px;
	visibility: visible;
	color: #FFFFFFFF;
}

PurchaseButton.OnMarket .PurchaseButtonLabel 
{
	visibility: collapse;
}

PurchaseButton.OnSale .PurchaseOnSale 
{
	visibility: visible;
}

.PurchaseOnSale
{
	margin-right: 10px;
	visibility: collapse;
	color: #FFFFFFFF;
}

.RegularPriceLabel 
{
	text-decoration: line-through;
}

.RegularPriceLabel 
{
	color: #B0B0B0FF;
}

.PurchasePrice
{
	color: #FFFFFFFF;
}


.CancelPurchase 
{
	background-color: gradient( linear, 0% 0%, 0% 100%, from( #DD4A2999 ), to( #722217 ) );
}

.CancelPurchase Label
{
    horizontal-align: center;
	color: #FFFFFFFF;
}

.CancelPurchase:hover
{
	background-color: gradient( linear, 0% 0%, 0% 100%, from( #DD4A29 ), to( #912b1d ) );
}

.CancelPurchase:active
{
	brightness: 1.5;
}