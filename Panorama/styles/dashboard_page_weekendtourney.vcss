DOTAWeekendTourneyPage
{
	width: 1420px;
	height: 780px;
	margin-top: 160px;
	
	vertical-align: top;
	horizontal-align: center;

	opacity: 0.0;
}

DOTAWeekendTourneyPage.PageVisible
{
	opacity: 1.0;
}

/* States of visibility */

#ContainerLoading
{
	opacity: 0.0;
	transition-property: opacity !immediate;
	transition-delay: 0.0s;
	transition-duration: 0.0s;
}

#ContainerLoading.FadeIn
{
	opacity: 1.0;
	transition-property: opacity !immediate;
	transition-delay: 1.0s;
	transition-duration: 0.5s;
}

DOTAWeekendTourneyPage.Loaded #ContainerLoading.FadeIn
{
	opacity: 0.0;
	transition-property: opacity !immediate;
	transition-delay: 0.0s;
	transition-duration: 0.0s;
}

#ContainerLoaded
{
	transition-property: opacity, pre-transform-scale2d, wash-color !immediate;
	transition-duration: 0.0s;
	opacity: 0.0;
	width: 100%;
	height: 100%;
	pre-transform-scale2d: 0.975;
	wash-color: #63b5af;
}

DOTAWeekendTourneyPage.Loaded #ContainerLoading
{
	opacity: 0.0;
}

DOTAWeekendTourneyPage.Loaded #ContainerLoaded
{
	transition-duration: 0.32s;
	transition-timing-function: ease-in;
	opacity: 1.0;
	pre-transform-scale2d: 1.0;
	wash-color: white;
}


/* Loading Container */
#ContainerLoading
{
	horizontal-align: center;
	margin-top: 150px;
	flow-children: right;
	padding-left: 5px;
}

#ContainerLoading Panel.Spinner
{
	margin-left: -30px;
	margin-top: -1px;
	width: 28px;
	height: 28px;
	wash-color: #a5ada2ff;
}

#ContainerLoading Panel.Spinner.Shadow
{
	margin-left: 0px;
	margin-top: 2px;
	wash-color: #000000ff;
	opacity: 0.8;
}

#ContainerLoading Label
{
	margin-left: 10px;
	vertical-align: middle;
	text-shadow: 2px 2px 2px #000000ff;
}

/* Loaded Container */

#ContainerLoaded
{
	flow-children: down;
}

/* Main content */

#Title
{
	width: 100%;
	text-transform: uppercase;
	font-size: 24px;
}

#Bracket
{
	margin-top: 40px;
	margin-left: 90px;
}
