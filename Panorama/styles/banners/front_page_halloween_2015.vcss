
#FrontpageCellHalloween2015
{
	contrast: 1;
	brightness: 1;
	saturation: 1;
	transition-property: brightness, contrast, saturation;
	transition-duration: 0.3s;
	transition-timing-function: ease-in-out;
}


#ImagePanel
{
	contrast: 1;
	brightness: 1;
	saturation: 1;
}


#FrontpageCellHalloween2015:hover #ImagePanel
{
	contrast: 1.1;
	brightness: 1.5;
	saturation: 1.1;
	transition-property: brightness, contrast, saturation;
	transition-duration: 0.3s;
	transition-timing-function: ease-in-out;	
}


#FrontpageCellHalloween2015:hover #Earthshaker
{
 	pre-transform-scale2d: 1.5;
	transform: translateX(-20px) translateY(35px);
}

#FrontpageCellHalloween2015:hover #Tiny
{
 	pre-transform-scale2d: 1.25;
	transform: translateX(10px) translateY(5px);
}

#FrontpageCellHalloween2015:hover #HauntedBackgroundImage
{
 	pre-transform-scale2d: 1.25;
	transform: translateX(10px) translateY(5px);
	 brightness: 2;
}


#HauntedBackgroundImage
{
	width: 363px;
	height: 238px;

	background-image: url("s2r://panorama/images/banners/halloween2015/background_psd.vtex");
	background-repeat: no-repeat;
	background-position: 50% 50%;
	background-size: cover;
	overflow: noclip;
	
	transition-property: brightness, pre-transform-scale2d, transform;
	transition-duration: 0.3s;
	transition-timing-function: ease-in-out;
}


.ImageLayer
{
	width: 336px;
	height: 232px;
	
	background-image: url("s2r://panorama/images/banners/layeredcell/layer1_png.vtex");
	background-repeat: no-repeat;
	background-position: 50% 50%;
	background-size: contain;
	
	transition-property: brightness, pre-transform-scale2d, transform;
	transition-duration: 0.3s;
	transition-timing-function: ease-in-out;
	
}

#Tiny
{
	width: 288px;
	height: 232px;
	pre-transform-scale2d: 1;
	transform: translateX(30px) translateY(-20px);
	overflow: noclip;
	
	transition-duration: 0.3s;
	background-image: url("s2r://panorama/images/banners/halloween2015/tiny_psd.vtex");
	horizontal-align: right;
	
}

#Earthshaker
{
	width: 190px;
	height: 254px;
	overflow: noclip;
	
	pre-transform-scale2d: 1;
	transform: translateX(0px) translateY(20px);
	
	background-image: url("s2r://panorama/images/banners/halloween2015/earthshaker_psd.vtex");
}

#CustomHeader
{
	background-color: #13B379;
	visibility: visible;
	color: black;
	text-shadow: none;

	transition-property: color;
	transition-duration: 0.2s;
	transition-timing-function: ease-in-out;
}

#CustomFooterText
{
	visibility: visible;
	color: #8FFFAD;
	transition-property: color;
	transition-duration: 0.2s;
	transition-timing-function: ease-in-out;
	text-shadow: 0px 0px 3px 3.0 #13B37933;
}

#FrontpageCellHalloween2015:hover #CustomHeader
{
	color: white;
}

#CustomFooter
{
	background-color: gradient( linear, 0% 0%, 0% 100%, from( #00000000 ), color-stop( 0.7, #0000004f  ), color-stop( 0.75, #0000006f  ), to( #000000ff ) );	
	vertical-align: bottom;
	width: 100%;
	height: 70%;
}

#CustomFooterDetails
{
	visibility: visible;
	vertical-align: bottom;
	margin-bottom: 32px;
	z-index: 2;
	color: #45E8AC;
}

#FrontpageCellHalloween2015:hover #CustomFooterDetails
{
	opacity: 1;
}