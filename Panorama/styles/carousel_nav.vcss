/* Styles used by crafting */

CarouselNav
{
	flow-children: right;
}

CarouselNav:disabled
{
	visibility: collapse;
}

#ItemPips
{
	flow-children: right;
	vertical-align: middle;
	margin-right: 5px;
}
.OverMaxPips #ItemButtons
{
	visibility: collapse;
}

#ItemCount
{
	visibility: collapse;
	margin-right: 4px;
	margin-top: 1px;
	text-align: right;
	color: #aaa;
}
.OverMaxPips #ItemCount
{
	visibility: visible;
}


/* Styling for .OverlayPips, which just shows the pips themselves overlaying some image */
.OverlayPips #PreviousItemButton, .OverlayPips #NextItemButton
{
	visibility: collapse;
}

.OverlayPips .PaginationButton
{
	background-color: black;
	border: 2px solid #63adc8;
	box-shadow: -1px -1px 3px 3px fill #000;
	margin: 4px 2px 8px 8px;

	transition-property: background-color;
	transition-duration: 0.2s;
}

.OverlayPips .PaginationButton:selected
{
	background-color: #63adc8;
}

/* SmallPips style that just shrinks down the pip size */
.OverlayPips.SmallPips
{
	margin: 3px;
}

.OverlayPips.SmallPips .PaginationButton
{
	width: 10px;
	height: 10px;
	border-width: 1px;
}