/* styles for the Buff tooltip */

#Contents.BuffContents
{
    width: 350px;
    flow-children: down;
    background-color: gradient( linear, 0% 0%, 0% 100%, from( #2d2d2dfc ), to( #000000fc ) );
}

#BuffHeader
{
    flow-children: right;

    border-bottom-color: #626262;
    border-bottom-width: 1px;
    border-bottom-style: solid;
    margin-bottom: 5px;
    padding-bottom: 8px;
}

#BuffName
{
    font-size: 19px;
    color: white;
    width: fill-parent-flow( 1.0 );
    vertical-align: middle;
}

#BuffLevel
{
    horizontal-align: right;
    margin-left: 8px;
    vertical-align: middle;
}

#BuffDescription
{
    color: #c8c8c8;
    font-size: 16px;
}
