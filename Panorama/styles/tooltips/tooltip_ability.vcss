/* styles for the ability tooltip */


.AbilityContents
{
    width: 350px;
    flow-children: down;
}

#ItemImage
{
	visibility: collapse;
}

.Item #ItemImage
{
	visibility: visible;
	width: 67px;
	height: 53px;
	margin-right: 8px;
	margin-bottom: 4px;
}

#Header
{
	flow-children: right;
}

#HeaderLabels
{
	flow-children: down;
}

#AbilityHeader
{
    flow-children: right;
}

#AbilityName
{
    font-size: 20px;
    color: white;
    width: fill-parent-flow( 1.0 );
    vertical-align: middle;
}

#AbilityLevel
{
    horizontal-align: right;
    margin-left: 8px;
    vertical-align: middle;
}

#AbilityTarget
{
    border-top-color: #626262;
    border-top-width: 1px;
    border-top-style: solid;
    border-bottom-color: #626262;
    border-bottom-width: 1px;
    border-bottom-style: solid;

    width: 100%;
    padding: 5px 0px 2px 0px;
    margin-top: 5px;
    margin-bottom: 5px;
    flow-children: down;
}

#AbilityTarget Label
{
    color: white;
    font-size: 16px;
}

.Item #AbilityTarget
{
	visibility: collapse;
}

#ItemCost
{
	flow-children: right;
	visibility: collapse;
}

.Item #ItemCost
{
	visibility: visible;
}

#ItemCostIcon
{
	width: 23px;
	height: 23px;
	background-image: url("s2r://panorama/images/hud/icon_gold_psd.vtex");
	background-size: 100%;
	margin-right: 5px;
}

#BuyCostLabel
{
	color: #FFCC33;
	font-size: 16px;
	font-weight: bold;
	margin-top: 3px;
}

#SellCostLabel
{
	visibility: collapse;
}

.Sell #BuyCostLabel
{
	visibility: collapse;
}

.Sell #SellCostLabel
{
	visibility: visible;
}

#AbilityDescription
{
    color: #c8c8c8;
    font-size: 16px;
}

#AbilityExtraDescription, #AbilityScepterDescription
{
    font-size: 16px;
    color: #70EA72;
}

#AbilityCosts
{
    flow-children: right;
    width: 100%;
    margin-top: 5px;
    margin-bottom: 5px;
}

#AbilityCosts Label
{
    color: #7d7d7d;
    font-size: 16px;
    width: 50%;
    background-position: 0% 50%;
    background-repeat: no-repeat;
    padding-left: 25px;
}

#AbilityCosts #AbilityCooldown
{
    background-image: url("s2r://panorama/images/status_icons/ability_cooldown_icon_psd.vtex");
}

#AbilityCosts #AbilityManaCost
{
    background-image: url("s2r://panorama/images/status_icons/ability_manacost_icon_psd.vtex");
}

#AbilityLore
{
    padding: 5px 10px 5px 10px;
    font-size: 13px;
    color: #c6c6c6;
}

#AbilityUpgradeLevel
{
    color: #ffcc33;
}

#AbilityBuildHeader
{
    color: #ff9900;
}

#AbilityBuildComment
{
    color: #ffffff;
}

