.ItemColor3
{
    wash-color: #1A89FD;
}

// DOTA_ITEM_QUALITY_EPIC   Color( 187, 17, 254, 255 );  // epic purpz
.ItemColor4
{
    wash-color: #BB11FE;
}

// DOTA_ITEM_QUALITY_ARTIFACT   Color( 230, 158, 0, 255 );   // orange artifact/orb
.ItemColor5
{
    wash-color: #E69E00;
}
    
// DOTA_ITEM_QUALITY_SECRET_SHOP    Color( 48, 207, 207, 255 );      // teal secret shop
.ItemColor6
{
    wash-color: #30CFCF;
}