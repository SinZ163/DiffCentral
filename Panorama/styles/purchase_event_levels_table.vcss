
DOTAPurchaseEventLevelsTable
{
	flow-children: down;
}

#TableRows
{
	flow-children: down;
}

.PurchaseTableRow
{
	flow-children: right;
	margin-bottom: 4px;
}

.PurchaseItemName
{
	width: 150px;
	text-align: center;
	margin-right: 8px;
	vertical-align: middle;
}

.PurchaseItemQuantity
{
	width: 90px;
	margin-right: 8px;
	text-align: center;
	vertical-align: middle;
	flow-children: right;
}

.PurchaseItemQuantity TextEntry
{
	width: fill-parent-flow( 1.0 );
}

.IncrementNumberButtons
{
	flow-children: down;
	margin-left: 2px;
}

.IncrementButton
{
	height: 17px;
	width: 17px;
	background-color: gradient( linear, 0% 0%, 0% 100%, from( #292e2e ), to( #191e1e ) );
	border: 1px solid baseBorder;
	margin-bottom: 2px;
}
.IncrementButton > Label
{
	text-align: center;
	horizontal-align: center;
	vertical-align: middle;
	font-size: 18px;
	transform: translateY( -3px );
}


.PurchaseTotalLevels
{
	width: 110px;
	vertical-align: middle;
	text-align: center;
	flow-children: right;
}
.PurchaseTotalLevels TextEntry
{
	width: fill-parent-flow( 1.0 );
}

.PurchaseSingleItemPrice
{
	text-align: center;
	vertical-align: middle;
	margin-right: 8px;
	width: 110px;
}

.PurchaseTotalPrice
{
	text-align: center;
	vertical-align: middle;
	width: 110px;
}

#HeaderRow
{
	margin-bottom: 6px;
	border-bottom: 1px solid #fff1;
}

#HeaderRow Label
{
	font-weight: bold;
}

#TotalsRow
{
	margin-bottom: 0px;
	margin-top: 4px;
	padding-top: 10px;
	border-top: 1px solid #fff1;
}

#TotalsRow Label
{
	font-weight: bold;
}