@define leftMargin: 264px;
@define leftMargin4x3: 64px;
@define leftMargin16x10: 184px;


.LearnPage
{
	margin-top: 170px;
	width: 100%;
	height: 100%;
}

#Header
{
	width: 100%;
	margin-left: leftMargin;
    margin-right: leftMargin;
}

#ChallengesContainer
{
    margin-top: 20px;
}

.AspectRatio4x3 #Header, .AspectRatio5x4 #Header
{
	margin-left: leftMargin4x3;
}

.AspectRatio4x3 #ChallengesContainer, .AspectRatio5x4 #ChallengesContainer
{
	padding-left: leftMargin4x3;
}

.AspectRatio16x10 #Header
{
	margin-left: leftMargin16x10;
}

.AspectRatio16x10 #ChallengesContainer
{
	padding-left: leftMargin16x10;
}

.PageTitle
{
    horizontal-align: center;
	width: 100%;
}

.PageTitle Label
{
    color: white;
	font-size: 46px;
	text-transform: uppercase;
	letter-spacing: 6px;
	margin-bottom: -8px;
}

.PageSubTitle
{
    horizontal-align: left;
	width: 100%;
	margin-top: 58px;
	margin-bottom: 8px;
}

.PageSubTitle Label
{
    color: #888888;
	font-size: 20px;
}

#ChallengesContainer
{
	padding-top: 104px;
    horizontal-align: center;
	width: 100%;
	height: 100%;
	padding-left: leftMargin;
	overflow: scroll squish;
	opacity-mask: url("s2r://panorama/images/masks/challenges_opacity_mask_png.vtex") 1.0;
}

.ChallengeModule
{
	width: 264px;	
	height: 480px;
	margin-right: 64px;
	margin-bottom: 12px;
	border: 2px solid black;
}

.ChallengeModule:hover
{
}

.ChallengeLocked.ChallengeModule:hover .ChallengeImage
{
	pre-transform-scale2d: 1.00;
	wash-color: #ff000000;
}

.ChallengeLocked.ChallengeModule:hover  #LockedIcon
{
	pre-transform-scale2d: 1.0;
	wash-color: #00000044;
}

.ChallengeLocked.ChallengeModule:hover #Requirement
{
	color: white;
}

.ChallengeLocked.ChallengeModule:hover #RequiresLabel
{
	color: #aaaaaa;
}

.ChallengeOpen.ChallengeModule:hover .ChallengeBody, .ChallengeOpen.ChallengeModule:hover .ChallengeRewardContainer
{
	background-color: #2b3132;
}

.ChallengeOpen.ChallengeModule:hover .ChallengeReward
{
	wash-color: #00000088;
}

.ChallengeOpen.ChallengeModule:hover #ChallengeName
{
	text-shadow: 0px 0px 26px 1 #ffffff66;
}

.ChallengeCompleted.ChallengeModule .ChallengeBody
{
	height: fit-children;
	padding-bottom: 8px;
}

.ChallengeImageContainer
{
	width: 264px;
	height: 198px;
	background-color: #1b1b1d;
}

.ChallengeImage
{
	background-size: 100% 100%;
	width: 100%;
	height: 100%;
	pre-transform-scale2d: 1.0;
	wash-color: transparent;

	
	transition-property: pre-transform-scale2d, wash-color;
    transition-duration: 0.32s;
	transition-timing-function: ease-in-out;
}

.ChallengeLocked .ChallengeImage
{
	opacity: 0.3;
	saturation: 0.5;	
	opacity-mask: url("s2r://panorama/images/masks/challengeimage_topdown_png.vtex") 0.98;
}


.ChallengeLocked #LockedIcon
{
	visibility: visible;
}

.ChallengeLocked #RequiresLabel
{
	visibility: visible;
}

.ChallengeLocked #Requirement
{
	visibility: visible;
}


#Completion
{
	horizontal-align: right;
	vertical-align: top;
	margin: 7px;
	text-shadow: 0px 0px 6px 2.2 #000000;
	color: #d8d8d9;
}

.ChallengeCompleted #Completion
{
	color: white;
}


#RequiresLabel
{
	visibility: collapse;
	color: #525758;
	font-size: 14px;
	letter-spacing: 1px;
	text-transform: uppercase;
	horizontal-align: left;
	vertical-align: bottom;
	margin-bottom: 32px;
	margin-left: 10px;

	transition-property: color;
    transition-duration: 0.32s;
	transition-timing-function: ease-in-out;

}

#Requirement
{
	visibility: collapse;
	color: #8f9b9d;
	font-size: 17px;
	font-weight: thin;
	horizontal-align: left;
	vertical-align: bottom;
	margin-left: 10px;
	margin-bottom: 12px;

	transition-property: color;
    transition-duration: 0.32s;
	transition-timing-function: ease-in-out;
}



#LockedIcon
{
	visibility: collapse;

	horizontal-align: center;
	vertical-align: top;
	margin-top: 32px;
	width: 83px;
	height: 99px;
	pre-transform-scale2d: 0.9;

	background-image: url("s2r://panorama/images/status_icons/challenge_locked_psd.vtex");
	background-repeat: no-repeat;
	background-size: 83px 99px;
	
	wash-color: #000000aa;
	
	transition-property: pre-transform-scale2d, wash-color;
    transition-duration: 0.32s;
	transition-timing-function: ease-in-out;
	
}

.ChallengeBody
{
	background-color: #1b1b1d;
	width: 100%;
	height: fill-parent-flow( 1.0 );
	min-height: 82px;
	padding-bottom: 8px;
	transition-property: background-color;
    transition-duration: 0.26s;
	transition-timing-function: ease-in-out;
}


#ChallengeName
{
	margin-top: 12px;
	margin-left: 10px;
	color: white;
	font-size: 20px;
	letter-spacing: 1px;
	text-transform: uppercase;
	text-shadow: 0px 0px 3px 1 #ffffff00;
}

#ChallengeDescription
{
	margin-top: 6px;
	font-size: 18px;
	text-shadow: 0px 0px 3px 1 #ffffff00;
    horizontal-align: left;
	margin-left: 16px;
	padding-right: 10px;
	overflow: clip scroll;
}

.ChallengeStatus
{
	margin-left: 10px;
	color: #386987;
	font-size: 14px;
	letter-spacing: 1px;
	text-transform: uppercase;
}

#ChallengeStatusLocked, #ChallengeStatusCompleted, #ChallengeStatusOpen
{
	visibility: collapse;
}

.ChallengeLocked #ChallengeName
{
	color: #5f6d65;
}


.ChallengeCompleted #ChallengeName
{
	color: #aaaaaa;
}

.ChallengeOpen #ChallengeStatusOpen
{
	visibility: visible;
}

.ChallengeCompleted #ChallengeStatusCompleted
{
	visibility: visible;
	color: #27b564;
}

.ChallengeLocked #ChallengeStatusLocked
{
	visibility: visible;
	color: #5f6d65;
}

.ChallengeRewardContainer
{
	width: 100%;
	background-color: #1b1b1d;

	transition-property: background-color;
    transition-duration: 0.26s;
	transition-timing-function: ease-in-out;
}

.ChallengeCompleted .ChallengeRewardContainer
{
	width: 100%;
	height: 100%;
	background-color: transparent;
	border-top: 2px solid black;
	border-right: 2px solid transparent;
	border-left: 2px solid transparent;
	border-bottom: 2px solid transparent;
	visibility: visible;
}

.ChallengeCompleted .ChallengeReward
{
	visibility: visible;
	background-position: center bottom; 
	margin: 0px;
	margin-bottom: 8px;
	background-size: 200px 217px;
	wash-color: none;
}

.ChallengeOpen .ChallengeReward
{
	saturation: 0.0;
	wash-color: #000000dd;
}

.ChallengeCompleted #ChallengeGlow
{
	visibility: visible;
}

.ChallengeReward
{
	width: 100%;
	height: 64px;
	vertical-align: bottom;
	horizontal-align: center;
	background-repeat: no-repeat;
	background-position: right bottom; 
	background-size: 116px 126px;
	margin: 16px;
	//wash-color: #384141;
	texture-sampling: alpha-only;

	transition-property: wash-color;
    transition-duration: 0.26s;
	transition-timing-function: ease-in-out;
}


#ChallengeGlow 
{ 
	width: 100%;
	height: 100%;
	vertical-align: bottom;
	opacity-mask: url("s2r://panorama/images/masks/softedge_box_png.vtex");
	visibility: collapse;
}

.Arrow
{
	vertical-align: bottom;
	horizontal-align: right;
	width: 32px;
	height: 32px;
	margin-bottom: 6px;
}

.Arrow.Left
{
	horizontal-align: right;
	margin-right: 72px;
}
.Arrow.Right
{
	margin-right: 32px;
}

#NavContainer
{
	horizontal-align: right;
	width: 100%;
	margin-top: 58px;
}

HorizontalScrollBar
{
	opacity: 0;
}
