TournamentMatchList
{
	width:100%;
	height:100%;
	flow-children:down;
}

#DayButtons
{
	width: 100%;
	height: 52px;

	margin-bottom: 8px;
	margin-left: 12px;

	flow-children: right;
}

#DayButtons .RadioBox
{
	visibility: collapse;
}

.DayButton
{
	width: 52px;
	height: 52px;

	border: 1px solid #222a2d;

	margin-right: 8px;
	padding-top: 6px;

	transition-property: border, background-color;
	transition-duration: 0.2s;
	transition-timing-function: ease-in-out;

	flow-children: down;
}

.DayButton.Hidden 
{
	visibility: collapse;
}

.DayOfWeek,
.DayOfMonth
{
	color: #637877;
	text-transform: uppercase;
	horizontal-align: center;

	margin-left: 0px;
	margin-right: 0px;

	width: 100%;
	text-align: center;

	transition-property: color;
	transition-duration: 0.2s;
	transition-timing-function: ease-in-out;
}

.DayOfWeek
{
	font-weight: thin;
	font-size: 16px;
	letter-spacing: 3px;
}

.DayOfMonth
{
	margin-top: -4px;
	font-size: 20px;
	letter-spacing: 2px;
}

.DayButton:hover
{
	border: 1px solid #637877;
}

.DayButton:selected
{
	background-color: #313d41;
}

#MatchesPanel
{
	width: 100%;
	height: fill-parent-flow( 1.0 );

	margin-bottom: 12px;
}

.MatchesDayPanel
{
	width: 100%;
	height: 100%;

	transition-property: opacity;
	transition-duration: 0.2s;
	transition-timing-function: ease-in-out;
	opacity: 1.0;

	flow-children: down;
	overflow: clip scroll;
}

.MatchesDayPanel.Hidden
{
	opacity: 0.0;
}
