TournamentNews
{
    width:454px;
    height:100%;
    flow-children:down;
    margin: 0px 8px 8px 8px;

	transition-property: position;
	transition-duration: 0.3s;
}
#TournamentNewsImage
{
    vertical-align: top;
	max-height: 200px;

	transition-property: saturation;
	transition-duration: 0.3s;
}
#TournamentNewsImage:hover
{
    saturation:1.5;
}
#TournamentNewsLabel
{
    text-align: left;
    font-size: 24px;
    line-height: 24px;
    color: #cccccc;
}
#TournamentNewsDate
{
    text-align: left;
    font-size: 16px;
    color: #5d6f70;
    margin-top: 8px;
}