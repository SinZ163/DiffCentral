/* styles for the social widgets */

DOTAFriendMenu
{
	width: 625px;
	height: 100%;
	border: 1px solid 293034;
	background-color: #262d32;
	box-shadow: fill #000000bb -12px -12px 24px 24px;

	flow-children: down;
	vertical-align: bottom;
	horizontal-align: right;
	
	transition-property: box-shadow, width, opacity, transform, wash-color;
	transition-timing-function: ease-in-out;
	transition-duration: 0.35s;
}

.FriendsPanelMainArea
{
	transition-property: opacity;
	transition-timing-function: ease-in-out;
	transition-duration: 0.35s;	
}

DOTAFriendMenu.Hidden
{
	opacity: 0.0;
	transform: translateY( 300px );
	wash-color: #000000;
	box-shadow: fill #00000000 -6px -6px 18px 12px;
}

DOTAFriendMenu.EditMode
{
	width: 1025px;
}

#FriendPanelMainAreaContainer.OnTeams
{
	height: 600px;
}

#FriendPanelMainAreaContainer
{
	width: 100%;
	height: fill-parent-flow( 1.0 );
	flow-children: none;
	max-height: 600px;
	transition-property: height, opacity, transform, max-height;
	transition-timing-function: ease-in-out;
	transition-duration: 0.35s;
	transition-delay: 0.0s;
}

#FriendPanelFriendsList, #FriendPanelTeams
{
	opacity: 1;
	box-shadow: fill #00000000 -6px -6px 18px 12px;
	width: 100%;
	height: 100%;
	overflow: squish scroll;
	flow-children: down;

	transition-property: height, opacity, transform, height;
	transition-timing-function: ease-in-out;
	transition-duration: 0.35s, 0.35s, 0.35s, 0.0s;
	transition-delay: 0.0s, 0.0s, 0.0s, 1s;
}

#FriendMenu #FriendPanelFriendsList, #FriendMenu #FriendPanelTeams
{
	height: 600px;
}
	

.HomeFriendsListContainer #FriendPanelTeams
{
	visibility: collapse;
}

#FriendPanelFriendsList.Collapsed, #FriendPanelTeams.Collapsed
{
	opacity: 0.0;
	height: 0px;
}



VerticalScrollBar, HTMLVerticalScrollBar
{
	background-color: #00000000;
	box-shadow: none;
}

VerticalScrollBar .ScrollThumb
{
	box-shadow: fill #000000aa -3px -3px 6px 6px;
}

#FriendsPanelHeader
{
	width: 100%;
	flow-children: down;
	min-height: 42px;
}

#FriendsPanelWindowHeader
{
	width: 100%;
	background-color: black;
	padding: 2px;
	height: 100%;
}

#FriendsPanelWindowHeaderLeft
{
	flow-children: right;
	horizontal-align: left;
	vertical-align: middle;
	padding-left: 8px;
}
 
#FriendsPanelWindowHeaderRight
{
	flow-children: right;
	horizontal-align: right;
	vertical-align: middle;
}

#FriendsPanelWindowHeaderRight Button
{
	tooltip-position: top;
	tooltip-body-position: 50% 50%;
}

#FriendsPanelWindowTitleFriends, #FriendsPanelWindowTitleTeams
{
	color: #828282;
	padding: 3px;
	font-weight: medium;
	letter-spacing: 2px;
	horizontal-align: left;
	vertical-align: middle;
	padding-top: 6px;
	text-transform: uppercase;

	transition-property: opacity;
	transition-duration: 0.25s;
}

#FriendsTabButton, #TeamsTabButton, #GuildsTabButton
{
	width: 30px;
	height: 30px;
	
	/*
	removing these icons for now, unless/until we revamp Friends to include this functionality
	*/
	opacity: 0.0;

	background-position: 50% 50%;
	background-repeat: no-repeat;
	margin-left: 8px;
}

#FriendsTabButton   { background-image: url("s2r://panorama/images/control_icons/friends_tab_png.vtex"); }
#TeamsTabButton     { background-image: url("s2r://panorama/images/control_icons/teams_tab_png.vtex");}
#GuildsTabButton    { background-image: url("s2r://panorama/images/control_icons/guilds_tab_png.vtex");}


#FriendsPanelTabs Button
{
	vertical-align: middle;
}

#FriendsPanelTabs Button Label
{
	color: #949494;
	font-size: 20px;
}

#FriendsPanelTabs Button:hover Label
{
	text-decoration: underline;
}

#FriendsPanelTabs Button.Selected Label
{
	color: #646ea0;
	font-size: 20px;
	font-weight: bold;
}

.FriendsPanelTabSeparator
{
	margin-left: 8px;
	margin-right: 8px;
	color: #949494;
	font-size: 25px;
	vertical-align: middle;
}

#FriendsPanelControls
{
	background-color: #1d2225;
	width: 100%;
	padding: 8px;
	flow-children: right;
	visibility: collapse;
}

#FriendsPanel.EditMode #FriendsPanelControls
{
	visibility: visible;
}
#FriendsPanel.EditMode #FriendsInParties
{
	visibility: collapse;
}


#FriendsPanelControls Button
{
	background-color: #f7f7f7;
	border-radius: 4px;
	border: 1px solid #b5b5b5;
	padding: 3px 10px 3px 10px;
	margin-left: 4px;
	min-width: 150px;
}

#FriendsPanelControls Button Label
{
	color: black;
	font-size: 14px;
	text-align: center;
	horizontal-align: center;
}

#FriendsPanelControls Button:hover
{
	border: 1px solid blue;
}

#FriendsPanelControls Button:active
{
	border: 1px solid black;
	background-color: black;
}

#FriendsPanelControls Button:active Label
{
	color: white;
}

#FriendsPanelMainAreaShadows
{
	margin-top: 42px;
	width: 100%;
	height: 100%;
	background-color: gradient( linear, 100% 0%, 100% 100%, from( #000000ff ), color-stop( 0.01, #00000000 ), color-stop( 0.94, #00000000 ), color-stop( 0.98, #00000022 ), to( #000000aa ) );
}


#CurrentUserStatus
{
	visibility: collapse;
	flow-children: right;
	padding: 8px;
	background-color: #1a1a1a;
	width: 100%;
}
#CurrentUserStatus #CurrentUser
{
	width: 50%;
}
#CurrentUserStatus #CurrentUserLookingToPlay
{
	width: 50%;
	vertical-align: middle;
	margin-right: 10px;
	margin-left: 40px;
	background-color: none;
}

#FriendsInParties
{
	flow-children: down;
	width: 100%;
	padding: 10px 10px 0px 10px;
	background-color: #2d363b;
	border-top: 1px solid black;
}

#FriendsInParties.Collapsed #PartyList
{
	visibility: collapse;
}

#PartyList
{
	flow-children: down;
	width: 100%;
}

.FriendPartyContainer
{
	flow-children: right;
	margin-bottom: 15px;
	margin-left: 3px;
}

.FriendPartyContainer DOTAFriend
{
	margin-right: 5px;
}

.FriendPartyContainer .FriendPartyStatus
{
	color: #929ba0;
	text-transform: uppercase;
	vertical-align: middle;
	margin-left: 5px;
	font-size: 14px;
	margin-bottom: 14px;

}

.FriendsCategory, .TeamsCategory
{
	flow-children: down;
	//padding: 10px 10px 0px 10px;
	//border-top: 1px solid black;
	width: 100%;
	height: fit-children;

	
	transition-property: height, opacity;
	transition-duration: .35s;
	transition-delay: 0.4s, 0.0s;
	transition-timing-function: ease-in-out;
}

.FriendsCategory.Collapsed, .TeamsCategory.Collapsed
{
	//height: 42px;
	//visibility: collapse;
}

.FriendsCategory #FriendsHeader, .TeamsCategory #MyTeamsHeader
{
