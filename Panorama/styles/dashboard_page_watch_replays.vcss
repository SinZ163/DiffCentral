
#DOTAWatchReplaysPage
{
	width: 1390px;
	height: 900px;

	horizontal-align: center;
	margin-top: 150px;

	flow-children: down;
}

.RowContainer
{
	height: 245px;
	width: 100%;

	margin-bottom: 20px;

	background-color:#00000077;
}

.RowHeader
{
	margin-left: 16px;
	margin-top: 10px;
	margin-bottom: 4px;

	color: #cccccc;
	font-size:22px;
	letter-spacing: 4px;

	horizontal-align: left;
	vertical-align: top;
}

.TransportControls
{
	horizontal-align: right;
	vertical-align: top;

	margin-right: 10px;
	margin-top: 12px;

	transition-property: opacity!immediate;
	transition-duration: 0.3s;
	transition-timing-function: ease-in-out;

	flow-children: right;
}

.CarouselRow
{
	width: 100%;
	height: 100%;

	flow-children: right;
}

.RowCarouselContainer
{
	width: 100%;
	height: 100%;

	margin-top: 50px;
	margin-bottom: 20px;

	margin-right: 10px;
	margin-left: 10px;

	flow-children: right;

	transition-property: position, opacity;
	transition-duration: 0.5s;
	transition-timing-function: ease-in-out;
}

.RowCarouselContainer.Offscreen
{
	opacity: 0.0;
}

.Row0Wait #Row0 .CarouselRow,
.Row1Wait #Row1 .CarouselRow,
.Row2Wait #Row2 .CarouselRow,
.Row0Wait #Row0 .TransportControls,
.Row1Wait #Row1 .TransportControls,
.Row2Wait #Row2 .TransportControls
{
	transition-property: opacity!immediate;
	transition-duration: 0.01s;
	transition-timing-function: ease-in-out;

	opacity: 0.0;
}

.Row0Wait #Row0 .ReplaysSpinner,
.Row1Wait #Row1 .ReplaysSpinner,
.Row2Wait #Row2 .ReplaysSpinner
{
	opacity: 1.0;
}


.ReplaysSpinner
{
	vertical-align: middle;
	horizontal-align: center;

	width: 28px;
	height: 28px;

	transition-property: opacity;
	transition-duration: 0.2s;
	transition-timing-function: ease-in-out;

	opacity: 0.0;
}

.WatchReplayGameElementSize
{
	width: fill-parent-flow( 0.25 );
	height: 100%;

	margin-left: 10px;
	margin-right: 10px;
}

