

DOTATreasureCell
{
	width: 336px;
	height: 256px;
	background-color: black;
	//border: 1px solid #ffffff11;

	margin-right: 16px;
	margin-bottom: 16px;
}

#TreasureBackground
{
	width: 100%;
	height: 100%;
	
	box-shadow: #000000aa -2px -2px 1px 4px fill;
}

#TreasureImage
{
	height: 100%;
	width: height-percentage( 150% );
	margin-top: -4px;
	margin-left: -4px;
}

#TreasureSeason
{
	margin-top: 8px;
	visibility: collapse;
}
.ShowSeason #TreasureSeason
{
	visibility: visible;
}

#TreasureSeasonLabel
{
	max-width: 200px;
}

#TreasuryTopTint
{
	background-image: url("s2r://panorama/images/tint_png.vtex");
	margin-top: 1px;
	width: 100%;
	horizontal-align: center;
	height: 20%;
}

#TreasureDetails
{
	width: 100%;
	height: 100%;

	flow-children: down;

	transform: translateY( 214px );

	transition-property: transform;
	transition-duration: 0.2s;
}

#TreasureHeader
{
	background-color: black;
	height: 42px;
	width: 100%;
	flow-children: right;
	padding: 10px 10px 7px 10px;
}

DOTATreasureCell:hover #TreasureDetails
{
	transform: translateY( 0px );
}

#TreasureName
{
	vertical-align: middle;
	width: fill-parent-flow( 1.0 );
	margin-right: 10px;
	color: #8b9493;
}

#TreasurePrice
{
	vertical-align: middle;
	flow-children: right;
}

#TreasurePriceLabel
{
	color: #adb3b3;
	visibility: collapse;
}

#TreasureCurrencyIcon
{
	vertical-align: middle;
	width: 20px;
	height: 20px;
	margin-bottom: -3px;

	visibility: collapse;

	background-image: url("s2r://panorama/images/compendium/coin_icon_png.vtex");
	background-size: contain;
	background-repeat: no-repeat;
}

.PurchaseWithEventPoints #TreasureCurrencyIcon
{
	visibility: visible;
}

#TreasureMarketIcon
{
	width: 24px;
	height: 24px;
	wash-color: #adb3b3;

	visibility: collapse;

	background-image: url("s2r://panorama/images/icon_market_button_png.vtex");
	background-size: contain;
	background-repeat: no-repeat;
	background-position: center;
}

#TreasureEventIcon
{
	width: 24px;
	height: 24px;
	wash-color: #adb3b3;

	visibility: collapse;

	background-image: url("s2r://panorama/images/status_icons/compendium_psd.vtex");
	background-size: contain;
	background-repeat: no-repeat;
	background-position: center;
}

.AvailableForPurchase #TreasurePriceLabel,
.AvailableForEventPoints #TreasurePriceLabel
{
	visibility: visible;
}
.AvailableOnMarket #TreasureMarketIcon
{
	visibility: visible;
}
.AvailableForEventPoints #TreasureCurrencyIcon
{
	visibility: visible;
}
.AvailableThroughEvent #TreasureEventIcon
{
	visibility: visible;
}

.AvailableForPurchase #TreasureCurrencyIcon, .AvailableForPurchase #TreasureEventIcon,
.AvailableForPurchase #TreasureMarketIcon, .AvailableForEventPoints #TreasureMarketIcon,
.PartnerPerfectWorld #TreasureMarketIcon, .PartnerNexon #TreasureMarketIcon
{
	visibility: collapse;
}

.TreasureItemsSection
{
	width: 100%;
	padding: 8px 10px;
	flow-children: down;
}

#TreasureContents
{
	background-color: #212121;
	height: fill-parent-flow( 1.0 );
	min-height: 60px;
}

#TreasureRares
{
	background-color: #333333;
	transition-delay: 0.2s;
	visibility: collapse;
}

DOTATreasureCell.HasRareItems #TreasureRares
{
	visibility: visible;
}

#TreasureContentsTitle, #TreasureRaresTitle
{
	color: #c9e3da;
	font-size: 14px;
	text-transform: uppercase;
}

.TreasureItemsList
{
	width: 100%;
	flow-children: down;
	overflow: squish scroll;
}

.TreasureItemsList > Panel
{
	flow-children: right;
}

.TreasureItemsList Label
{
	white-space: nowrap;
	font-size: 14px;
	color: #999999;
}

.TreasureItemsList .UnitName
{
	color: #d0d0d0;
	text-transform: uppercase;
}

#OwnedTreasuresCount
{
	width: 80px;
	margin-top: 8px;
	margin-right: 8px;
	padding-bottom: 2px;
	horizontal-align: right;

	visibility: collapse;
}

.OwnsTreasure #OwnedTreasuresCount
{
	visibility: visible;
}