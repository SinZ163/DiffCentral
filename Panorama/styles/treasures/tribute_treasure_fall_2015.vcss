
#Background
{
	flow-children: right;
}

#ImageBackground
{
	width: 100px;
	height: 100%;
	padding: -30px;
	background-color: gradient( linear, 0% 0%, 0% 100%, from( #5f6b69cc ), to( #5f6b6911 ) );
	overflow: noclip;
}

#InfuserImage
{
	vertical-align: middle;
	width: 200px;
	height: 182px;
	margin-left: -27px;
	margin-top: -30px;
}

#Contents
{
	padding: 10px 14px;
	background-color: gradient( linear, 0% 0%, 0% 100%, from( #424d4fcc ), to( #424d4f22 ) );
	flow-children: down;
}

#Title
{
	font-size: 20px;
	color: white;
	font-weight: bold;
	text-transform: uppercase;
}

#Description
{
	margin-top: 4px;
	width: 360px;
	color: #8d9892;
}

#ApplyButton
{
	horizontal-align: center;

	background-image: url("s2r://panorama/images/compendium/fall2015_button_1_png.vtex");
	background-size: 100% 100%;
	padding: 8px;
	height: 45px;
	width: fill-parent-flow( 1.0 );
}

#ApplyButton Label
{
	margin-top: 1px;
	vertical-align: middle;
	horizontal-align: center;
	text-align: center;
	font-weight: bold;
	text-transform: uppercase;
	color: #ccc5bd;
}

#ApplyButton:hover:enabled
{
	brightness: 1.5;
}

#ApplyButton:active
{
	brightness: 2.0;
}

#ApplyButton:disabled
{
	brightness: 0.5;
}

#ApplyInfuser
{
	margin-top: 12px;
	flow-children: right;
	width: 100%;
}

#OwnedDetails
{
	flow-children: down;
	width: 80px;
	background-color: #3c6269aa;
	margin-right: 14px;

	visibility: collapse;
}

.HasInfusers #OwnedDetails
{
	visibility: visible;
}

#OwnedCount
{
	horizontal-align: center;
	font-size: 24px;
	color: white;
	text-align: center;
}

#OwnedLabel
{
	margin-top: -6px;
	text-transform: uppercase;
	horizontal-align: center;
	font-size: 14px;
	color: white;
	text-align: center;
}


#PreviewInfuser
{
	margin-top: 8px;
}

#PreviewInfuser Label
{
	text-transform: uppercase;
	font-size: 18px;
}

