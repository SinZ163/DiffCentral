
#Background
{
	flow-children: right;
}

#ImageBackground
{
	width: 100px;
	height: 100%;
	padding: -30px;
	background-color: gradient( linear, 0% 0%, 0% 100%, from( #5f6b69cc ), to( #5f6b6911 ) );
	overflow: noclip;
}

#InfuserImage
{
	vertical-align: middle;
	width: 200px;
	height: 182px;
	margin-left: -27px;
	margin-top: -30px;
}

#Contents
{
	padding: 10px 14px;
	background-color: gradient( linear, 0% 0%, 0% 100%, from( #424d4fcc ), to( #424d4f22 ) );
	flow-children: down;
}

#Title
{
	font-size: 20px;
	color: white;
	font-weight: bold;
	text-transform: uppercase;
}

#Description
{
	margin-top: 4px;
	width: 360px;
	color: #8d9892;
}

#ApplyInfuser
{
	margin-top: 12px;
	width: 100%;
}
