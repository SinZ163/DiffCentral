.IngamePredictionNotification
{
	width: 350px;
    height: fit-children;
    flow-children: down;
    background-color: #0B183788;
	background-color: gradient( linear, 0% 0%, 0% 100%, from( #302929fd ), to( #000000ff ) );
}

.PredictionNotificationTitle
{
	text-transform: uppercase;
	text-align: center;
	width: 100%;
	horizontal-align: center;
	font-size: 24px;
	border-bottom: 1px solid gray;
}


/* Status - shows question status */
.Status
{
	width: 160px;
	height: 24px;
	horizontal-align: right;
	background-color: #484848;
}

.Status Label
{
	visibility: collapse;
	text-transform: uppercase;
	margin-left: 8px;
	vertical-align: center;
	margin-top: 2px;
}

.IngamePredictionNotification.CorrectPrediction .Status
{
	background-color: #00A00030;
}

.IngamePredictionNotification.CorrectPrediction .Correct
{
	visibility: visible;
}

.IngamePredictionNotification.InCorrectPrediction .Status
{
	background-color: #A0000030;
}

.IngamePredictionNotification.InCorrectPrediction .Incorrect
{
	visibility: visible;
}

.IngamePredictionNotification.WinningPrediction .Status
{
	background-color: #00C0C030;
}

.IngamePredictionNotification.WinningPrediction .Winning
{
	visibility: visible;
}

.IngamePredictionNotification.LosingPrediction .Status
{
	background-color: #A0A00030;
}

.IngamePredictionNotification.LosingPrediction .Losing
{
	visibility: visible;
}

.Status .InProgress
{
	visibility: visible;
}

.IngamePredictionNotification.CorrectPrediction .Status .InProgress
{
	visibility: collapse;
}

.IngamePredictionNotification.InCorrectPrediction .Status .InProgress
{
	visibility: collapse;
}

.IngamePredictionNotification.WinningPrediction .Status .InProgress
{
	visibility: collapse;
}

.IngamePredictionNotification.LosingPrediction .Status .InProgress
{
	visibility: collapse;
}

/* Question - shows the question */
.PredictionChangedQuestion
{					 
	width: 100%;
	margin-top: 3px;
	margin-left: 5px;
	margin-right: 5px;
    font-size: 18px;
}

.PredictionChangedBottom
{
	width: 100%;
    flow-children: down;
}

.PredictionChangedBottom .Hidden
{
	visibility: collapse;
}

.ResultContainer
{
	margin: 5px;
	flow-children: right;
	horizontal-align: center;
}

.ResultContainerTitle
{
	width: 100px;
	text-transform: uppercase;
	text-align: right;
	margin-right: 5px;
	font-size: 12px;
	color: #AAAA00;
    vertical-align: center;
}

#PreviousResult
{
	vertical-align: center;
}

.ResultsArrow
{
    horizontal-align: middle;
	width: 18px;
	height: 18px;
	transform: rotateZ( 270deg );
}

.IngamePredictionNotification.CorrectPrediction .IngamePredictionNotification
{
	background-color: #00A00088;
}

.IngamePredictionNotification.InCorrectPrediction .IngamePredictionNotification
{
	background-color: #A0000088;
}
