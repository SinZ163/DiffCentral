.TournamentMatchDetailsGame
{
    width:100%;
    flow-children: down;
}

#MatchDetailsGameDetails
{
	flow-children: right;
}

.MatchDetailsGameTeam
{
    flow-children:down;
    width: fill-parent-flow( 0.3 );
}
.MatchDetailsGameTeamImages
{
    flow-children:right;
    horizontal-align:center;
}
.MatchDetailsGameInfo
{
    width: fill-parent-flow( 0.4 );
}
.MatchDetailsGameInfo
{
    flow-children:down;
}
.MatchDetailsGameScoreInfo
{
    flow-children: right;
	horizontal-align: center;
}

.MatchDetailsGameScore
{
	color: #ccc;
	margin-top: 26px;
	width: 40px;
	text-align: center;
}

.MatchDetailsGameTime
{
	horizontal-align:center;
	vertical-align:bottom;
	color: #596b6b;
	font-size: 16px;
	margin-top: 6px;
}

.MatchDetailsGameNumber
{
    margin-top:24px;
    width:50px;
 
}
.MatchDetailsGameNumber Label
{
	text-align: center;
	horizontal-align: center;
	width: height-percentage( 100% );
	padding-top: 2px;
	border-radius: 50%;
	background-color: #596b6b;
	color: #2a3334;
	font-weight: bold;
}
#MatchDetailsGameButtons
{
    flow-children: right;
	padding: 6px 8px 8px 8px;
}
.MatchDetailsGameButton
{
	margin: 0px 5px;
	padding: 4px 5px 2px 5px;
	min-width: 0px;
	width: fill-parent-flow( 1.0 );
}
.MatchDetailsGameButton Label
{
	font-size: 16px;
	text-transform: uppercase;
}

#MatchDetailsGameDownloadProgress, #MatchDetailsGameDecompressProgress
{
	width: fill-parent-flow( 1.0 );
	text-align: center;
	visibility:collapse;
}

.IsDecompressing #MatchDetailsGameDecompressProgress,
.IsDownloading #MatchDetailsGameDownloadProgress
{
	visibility:visible;
}

.IsDecompressing #MatchDetailsGameWatchReplay, 
.IsDownloading #MatchDetailsGameWatchReplay
{
    visibility:collapse;
}

.MatchDetailsHeroImage
{
    width:14px;
    margin-left:2px;
    margin-right:2px;
    height:50px;
    margin-top:10px;
}

#MatchDetailsGameWatchLive
{
	background-color: #488d68;
	visibility: collapse;
}
#MatchDetailsGameWatchLive Label
{
	color: black;
	letter-spacing: 1px;
}
#MatchDetailsGameWatchLive:hover:enabled
{
	brightness: 1.5;
}

.LiveGame #MatchDetailsGameWatchLive
{
	visibility: visible;
}

.LiveGame #MatchDetailsGameTime
{
	color: #488d68;
}
.LiveGame #MatchDetailsGameShowDetails, .LiveGame #MatchDetailsGameWatchReplay
{
    visibility:collapse;
}


.MatchDetailsGameWinner
{
	letter-spacing: 1px;
	text-transform: uppercase;
	text-align: center;
	horizontal-align: center;
	color: #cccccc;
	font-size: 16px;
	margin-top: 2px;

	visibility: collapse;
}

.Team1Win #MatchDetailsGameTeam1Winner, .Team2Win #MatchDetailsGameTeam2Winner
{
	visibility: visible;
}