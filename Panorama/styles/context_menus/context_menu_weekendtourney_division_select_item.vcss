DOTAContextMenuWeekendTourneyDivisionSelectItem
{
	width: 100%;
}

#RadioButtonBody
{
    flow-children: down;
    width: fill-parent-flow( 1.0 );
}

#DivisionRegionsRow
{
	flow-children: right;
}

.WeekendTourneyDivisionRegion
{
	margin-left: 15px;
}

.ScheduleStateLabel
{
	visibility: collapse;
}

.StateNoTournamentScheduled #NoTournamentScheduledLabel,
.StateStartingLater #StartingTimeLongLabel,
.StateStartingSoon #StartingTimeShortLabel,
.StateOpen #NowOpenLabel,
.StateTooLate #TooLateLabel
{
	visibility: visible;
}

#DivisionName
{
	color: #9dcdcf;
	font-size: 18px;
}

.WeekendTourneyDivisionRegion
{
	font-size: 14px;
}

.WeekendTourneyDivisionRegion.RegionStateSelected
{
	text-transform: uppercase;
	font-size: 14px;
	color: #866c36;
}

.WeekendTourneyDivisionRegion.RegionStateUnselected
{
	color: #404040;
	text-transform: uppercase;
	font-size: 14px;
}

.WeekendTourneyDivisionRegion.RegionStatePingFailed,
.WeekendTourneyDivisionRegion.RegionStateOffline
{
	text-transform: uppercase;
	font-size: 14px;
	color: #4c3f31;
}
