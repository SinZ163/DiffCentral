/* styles for the chat target context menu */

#Contents.ContextMenuProfileCardSlotContents
{
    flow-children: down;
	background-color: #1f1f1f;
	padding: 0px;
	border: 0px;
	box-shadow: #000000 -4px -4px 8px 8px;
}

.HeaderRow
{
	flow-children: right;
	background-color: #2d2d2d;
	width: 100%;
}

.SlotTypeTabs
{
    flow-children: right;
	width: fill-parent-flow( 1.0 );
    margin-bottom: 5px;
	padding: 16px 16px 14px 16px;
}

.SlotTypeTab .RadioBox
{
    visibility: collapse;
}

.SlotTypeTab Label
{
    text-transform: uppercase;
    font-size: 20px;
    margin: 0px;
	letter-spacing: 2px;
}

.SlotTypeTabSeparator
{
    margin: 0px 10px;
    vertical-align: middle;
}

#ClearSlotButton
{
	vertical-align: middle;
	border: 1px solid baseText;
	margin-right: 16px;
	padding: 4px 8px 2px 8px;

	transition-property: border;
	transition-duration: 0.1s;
}
#ClearSlotButton > Label
{
	text-transform: uppercase;
	text-align: center;
	letter-spacing: 2px;

	transition-property: color;
	transition-duration: 0.1s;
}

#ClearSlotButton:hover
{
	border: 1px solid white;
}
#ClearSlotButton:hover > Label
{
	color: white;
}

.TabContents
{
    width: 840px;
    height: 616px;
	padding: 4px 16px 16px 16px;

    visibility: collapse;
}

.TabContents.TabVisible
{
    visibility: visible;
}


.SearchBox
{
    flow-children: right;
    width: 300px;
    background-color: black;
}

.SearchBox TextEntry
{
    width: fill-parent-flow( 1.0 );
    border: 0px solid transparent;
    background-color: none;
}

.SearchBox TextEntry #PlaceholderText
{
    margin-top: 2px;
	color: #8a8a8a;
}

.SearchBox Button
{
    background-image: url("s2r://panorama/images/control_icons/icon_search_png.vtex");
    background-repeat: no-repeat;
    background-size: contain;

    width: 27px;
    height: 27px;
    margin: 0px 8px;
    vertical-align: middle;

    wash-color: #4f4f4f;

    transition-property: wash-color;
    transition-duration: 0.1s;
}

.SearchBox Button:hover
{
    wash-color: #cccccc;
}

.SearchBox Button:active
{
    wash-color: #ffffff;
}

/* Trophies */
#TrophyList
{
    flow-children: right-wrap;
}

.TrophyButton
{
    width: 100px;
    height: width-percentage( 100% );
    margin: 5px;
    padding: 2px;
}

.TrophyButton:hover
{
    background-color: #ffffff08;
}

.TrophyButton DOTATrophyImage
{
    vertical-align: bottom;
    horizontal-align: center;
    height: 100%;
    width: 100%;
}

#LoadingTrophies
{
    horizontal-align: center;
    vertical-align: middle;
}

.TrophiesTabContents
{
    visibility: collapse;
}

.TrophiesTabContents.TrophiesTabContentsVisible
{
    visibility: visible;
}

/* Items */
#ItemsContents
{
    flow-children: down;
}

#ItemsHeader
{
    flow-children: right;
    margin-top: 2px;
    margin-bottom: 4px;
}

#ItemsSearchPrefix
{
    vertical-align: middle;
    margin-right: 5px;
}

#ItemsHeaderFiller
{
    width: fill-parent-flow( 1.0 );
}

#ItemList
{
    flow-children: down-wrap;
    overflow: scroll squish;
    height: fill-parent-flow( 1.0 );
    padding-bottom: 10px;
	margin-top: 7px;
}

#ItemList DOTAEconItem
{
    height: 93px;
    width: height-percentage( 91.96% ); /* Default econ item size is 103 wide, 112 tall */

	margin: 0px 8px 8px 0px;
}

#ItemList DOTAEconItem.Filtered
{
    visibility: collapse;
}

.NoItems #ItemsContents
{
    visibility: collapse;
}

#NoItemsMessage
{
    visibility: collapse;
}

.NoItems #NoItemsMessage
{
    visibility: visible;
}

/* Heroes */
#HeroesTab
{
    flow-children: down;
}

#HeroOptions
{
    flow-children: right;
    margin-top: 2px;
    margin-bottom: 3px;
}

.HeroHoverOptionsLabel
{
	vertical-align: middle;
	margin-right: 10px;
	color: #646464;
}

.HeroHoverOption
{
    margin-right: 12px;
	vertical-align: middle;
	border: 1px solid #4e4e4e;
	padding: 6px 9px 3px 9px;
}

.HeroHoverOption .RadioBox
{
	visibility: collapse;
}

.HeroHoverOption Label
{
	text-transform: uppercase;
	text-align: center;
	margin: 0px;
	color: #8f8f8f;
}

.HeroHoverOption:selected
{
	background-color: #4e4e4e;
}

#HeroOptionsFiller
{
	width: fill-parent-flow( 1.0 );
}

#HeroList
{
	margin-top: 8px;
	margin-bottom: -15px;
    flow-children: down;
    overflow: squish scroll;
    width: 100%;
}

.HeroCategory
{
    flow-children: right-wrap;
    margin-bottom: 15px;
}

.HeroCategory DOTAHeroImage
{
    width: 48px;
    height: width-percentage( 100% );
	margin: 0px 8px 8px 0px;
    border: 1px solid black;

    transition-property: border, saturation, opacity;
    transition-duration: 0.2s;
}

.HeroCategory DOTAHeroImage:enabled:hover
{
    border: 1px solid white;
}

.HeroCategory DOTAHeroImage:disabled
{
	saturation: 0.0;
	opacity: 0.2;
}
