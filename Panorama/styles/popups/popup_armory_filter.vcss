#StripeAncient	{ wash-color: rarity_color_ancient; }
#StripeLegendary{ wash-color: rarity_color_legendary; }
#StripeMythical	{ wash-color: rarity_color_mythical; }
#StripeRare		{ wash-color: rarity_color_rare; }
#StripeUncommon	{ wash-color: rarity_color_uncommon; }
#StripeCommon	{ wash-color: rarity_color_common; }


.VerticalDivider
{
	vertical-align: middle;
	height: 85%;
	background-color: #444C4C;
}

.RequiredSettingLabel
{
	margin-left: 10px;
	color: #bb0000;
	font-size: 16px;
	background-color: #330000;
	border: 1px solid #550000;
	padding: 0px 4px -2px 4px;
	text-align: center;
	vertical-align: top;
	margin-top: 2px;
	
	transition-property: opacity;
	transition-duration: 0.25s;
	opacity: 0.0;
}

.RequiredSettingLabel.RequiredVisible
{
	opacity: 1.0;
}

#DeleteButton
{
	horizontal-align: left;
	margin: 0px;
	margin-left: 16px;

}

#FilterNameRow
{
	width: 100%;
}

.TagRow
{
	width: 100%;
    flow-children: right;
    horizontal-align: center;
}

.TagRow ToggleButton
{
	vertical-align: center;

}


.NumberList
{
	vertical-align: middle;
	margin-left: 0px;
	font-size: 24px;
	color: #888888;
	margin-top: 4px;
	padding-left: 0px;
}
