/* styles for the edit chat tab popup */

DOTAPopupPlayerCardSelect.PopupPanel
{
	width: 1290px;
	height: 700px;

	padding: 5px;

	horizontal-align: center;
	vertical-align: center;
}

#Background
{
	width: 100%;
	height: 100%;
	flow-children: down;
}

.Header
{
	width: 100%;
	height: 60px;
	background-color: #000000;

	vertical-align: top;
}

.Header Label
{
	color: #CCCCCC;

	vertical-align: center;
	padding-left: 20px;

	font-size: 22px;
}

.Header #TeamSelector
{
	vertical-align: center;
	horizontal-align: right;
	margin-right: 10px;
}

.Header #TopBarSearchBox
{
	vertical-align: center;
	margin-left: 640px;
}

.Header #TopBarSearchBox TextEntry
{
	border-width: 2px;
	padding-top: 7px;
	height: 41px;
	width: 300px;
}

#CardCarousel
{
	width: 100%;
	height: 500px;
	margin: 0px 35px;

	horizontal-align: center;
}
#CardCarousel DOTAPlayerCard
{
	margin-top: 30px;
	opacity: 0;

	transition-property: opacity, position, transform;
	transition-duration: 0.3s, 0.3s, 0.1s;
	transition-timing-function: ease-in-out;
}

DOTAPopupPlayerCardSelect #CardCarousel DOTAPlayerCard.CarouselHidden
{
	opacity: 0;
}


#CardCarousel DOTAPlayerCard.LeftOfFocus1,
#CardCarousel DOTAPlayerCard.LeftOfFocus2,
#CardCarousel DOTAPlayerCard.LeftOfFocus3,
#CardCarousel DOTAPlayerCard.LeftOfFocus4,
#CardCarousel DOTAPlayerCard.LeftOfFocus5
{
	x: 40px;
}

#CardCarousel DOTAPlayerCard.Focused
{
	width: 300px;
	opacity: 1;
	x: 80px;
}

#CardCarousel DOTAPlayerCard.RightOfFocus1
{
	width: 300px;
	opacity: 1;
	x: 440px;
}

#CardCarousel DOTAPlayerCard.RightOfFocus2
{
	width: 300px;
	opacity: 1;
	x: 800px;
}

#CardCarousel DOTAPlayerCard.RightOfFocus3,
#CardCarousel DOTAPlayerCard.RightOfFocus4,
#CardCarousel DOTAPlayerCard.RightOfFocus5,
#CardCarousel DOTAPlayerCard.RightOfFocus6,
#CardCarousel DOTAPlayerCard.RightOfFocus7
{
	x: 800px;
}

#CardCarousel DOTAPlayerCard:hover
{
	brightness: 1.2;
	transform: scaleX( 1.05 ) scaleY( 1.05 );
}

#CardCarousel DOTAPlayerCard:active
{
	transform: scaleX( 1.08 ) scaleY( 1.08 );
}

.TransportControls
{
	horizontal-align: center;
}
.CloseButton
{
	visibility: visible;

	horizontal-align: right;
	vertical-align: top;
}
