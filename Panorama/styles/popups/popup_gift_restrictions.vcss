/* styles for the gift restrictions popup */

DOTAPopupGiftRestrictions
{
	width: 800px;
}

#Contents > Panel
{
	visibility: collapse;
}
.LoadingInProgress #LoadingInProgressContents,
.LoadingFailed #LoadingFailedContents,
.LoadingSuccess #LoadingSuccessContents
{
	visibility: visible;
}

#LoadingSuccessContents > Panel
{
	visibility: collapse;
}
.NoRestrictions #NoRestrictions,
.SenderRestricted #SenderRestrictions,
.ReceiversRestricted #ReceiverRestrictions
{
	visibility: visible;
}


DOTAPopupGiftRestrictions Label a
{
	color: #87b8c3;
}

#Contents
{
	width: 100%;
}

#LoadingInProgressContents
{
	horizontal-align: center;
}

#LoadingSuccessContents
{
	width: 100%;
}

#NoRestrictions
{
	width: 100%;
}
#NoRestrictions > Label
{
	horizontal-align: center;
	text-align: center;
}

#SenderRestrictions
{
	flow-children: down;
}

#ReceiverRestrictions
{
	flow-children: down;
}

.RestrictedFriendsTitle
{
	margin-bottom: 2px;
}

#RestrictedFriends
{
	flow-children: down;
	max-height: 200px;
	width: 100%;
	overflow: squish scroll;
	background-color: black;
	padding: 10px 10px 0px 10px;
}

.RestrictedFriend
{
	flow-children: right;
	margin-bottom: 10px;
}

.RestrictedFriend #AvatarImage
{
	width: 50px;
	height: 50px;
	margin-right: 10px;
}

.RestrictedFriend .RestrictionDetails
{
	flow-children: down;
	vertical-align: middle;
}

.RestrictedFriend .RestrictionReason
{
	color: #888;
	font-size: 16px;
}

#FriendshipAgeMessage
{
	margin-top: 30px;
	font-size: 16px;
}

.RestrictionsFooter
{
	margin-top: 16px;
	font-size: 16px;
}
.PartnerPerfectWorld .RestrictionsFooter
{
	visibility: collapse;
}