/* styles for the generic popup line item */

.PurchaseLineItem
{
    height: fit-children;
    width: fit-children;
    flow-children: right;
    margin-bottom: 4px;
}

#ItemImage
{
    width: 70px;
}

.PurchaseLineItem Label
{
    vertical-align: center;
}

.ItemName
{
   margin-left: 10px;
   margin-right: 10px;
   width: 400px;
}

.ItemQuantity
{
    width: 70px;
    text-align: right;
}

.ItemPrice
{
    width: 90px;
    text-align: right;
}

.ScrollBarSpacer
{
    width: 12px;
}