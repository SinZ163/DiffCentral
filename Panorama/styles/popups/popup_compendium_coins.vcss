@define compendiumCoinAnimateDelay: 1.4s;
@define compendiumCoinAnimateInterval: 0.1s;


PopupCompendiumCoins
{
}

.PopupPanel
{
	pre-transform-scale2d: 1;
	opacity: 1;
	width: 1140px;
	horizontal-align: center;
	background-color: gradient( linear, 0% 0%, 0% 25%, from( #232326 ), to( black ) );
	background-color: none;
	border: 0px solid #32383677;
	animation-name: none;

	/*background-color: none;
	box-shadow: none;
	border: 0px solid black;*/
	
	box-shadow: none;

	padding: 0px;
	flow-children: none;
	
	transition-property: background-color, transform, pre-transform-scale2d, opacity, wash-color;
	transition-duration: 0.35s;
}

.PopupPanel.Hidden
{
	opacity: 0;
}

.MainBox
{
	width: 660px;
	height: 450px;
	horizontal-align: center;
	margin: 24px;
	flow-children: down;

	padding-top: 40px;

	background-color: gradient( linear, 0% 0%, 0% 100%, from( #272d2eff ), to( #131617ff ) );
	border: 1px solid #5e6869;
}

.CoinLabel
{
	color: #ffffff;
	font-size: 28px;
	text-align: center;
	width: 100%;
}

#BlackBanner
{
	width: 100%;
	background-color: black;
	flow-children: down;
	margin-top: 30px;
	padding-top: 14px;
	margin-bottom: 30px;
}

#BlackBanner #CoinCounterTitle
{
	color: #B1A8A4;
	font-size: 16px;
	horizontal-align: center;
	margin-bottom: -15px;
}

#CoinRow
{
	flow-children: right;
	width: 100%;
}

#CoinImage
{
	width: 147px;
	height: 117px;
	margin-left: 165px;
}

#CoinRow Label
{
	font-size: 48px;
	color: #8dbe22;
	vertical-align: center;
}

#CoinBank
{
	min-width: 135px;
	margin-right: 10px;
}

#CoinsGained
{
	min-width: 100px;
}

#CoinPlus
{
	opacity: 0.0;
	margin-top: -5px;
	width: 30px;
}

.PlusVisible #CoinPlus
{
	opacity: 1.0;
}

#CoinsGained
{
	opacity: 1.0;
}

.HideCoinsGained #CoinsGained
{
	opacity: 0.0;
}

#RedeemInfoButton
{
	margin: 8px;
	min-width: 192px;
	padding: 5px 10px 5px 10px;
}

#RedeemInfoButton Label
{
	font-size: 16px;
	color: #B1A8A4;
	horizontal-align: center;
	vertical-align: middle;
	text-decoration: none;
}

#RedeemInfoButton:hover Label
{
	color: #ffffff;
	text-decoration: underline;
}

Button
{
	horizontal-align: center;
}