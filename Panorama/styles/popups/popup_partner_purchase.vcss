/* styles for the generic popup */

PopupPartnerPurchase
{
    flow-children: down;
}


.PurchaseLineItem
{
    height: fit-children;
    width: fit-children;
    flow-children: right;
}

.ItemTitleSpacer 
{
    width: 70px;
}

.ItemTitleName
{
   margin-left: 10px;
   margin-right: 10px;
   width: 400px;
}

.ItemTitleQuantity
{
    width: 70px;
    text-align: right;
}

.ItemTitlePrice
{
    width: 90px;
    text-align: right;
}

#LineItems
{
    max-height: 300px;
    height: fit-children;
    width: fit-children; 
    horizontal-align: center;
    flow-children: down;
    overflow: scroll;
    margin-right: 8px;
}

.Spacer
{
    width: 24px;
}

.RechargeButton
{
    background-color: gradient( linear, 0% 0%, 0% 100%, from( #400000 ), to( #1d0000 ));
}

.RechargeButton:hover
{
    background-color: gradient( linear, 0% 0%, 0% 100%, from( #600000 ), to( #3d0000 ));
}

.PopupPanel.CannotAfford .RechargeButton
{
	background-color: gradient( linear, 0% 0%, 0% 100%, from( #60862d ), to( #3d5f1c ));
}

.PopupPanel.CannotAfford .RechargeButton:hover
{
	background-color: gradient( linear, 0% 0%, 0% 100%, from( #80b33c ), to( #649c2e ));
}

.RechargeButton Label
{
    font-size: 24px;
}

.Balance
{
    vertical-align: center;
    font-size: 24px;
    margin-right: 10px;
}


