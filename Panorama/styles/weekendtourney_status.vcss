
WeekendTourneyStatusPanel
{
	flow-children: down;
	background-color: gradient( linear, 100% 0%, 100% 100%, from( #192229 ), to( #000000 ) );
	padding-top: 12px;
	padding-bottom: 9px;
}

#DivisionSelectDropdown
{
	border: 0px;
	background-color: transparent;
	box-shadow: none;
}

