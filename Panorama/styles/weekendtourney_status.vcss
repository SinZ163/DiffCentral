#NoTournamentScheduledLabel, #StartingTimeLongLabel, #StartingTimeShortLabel, #NowOpenLabel, #TooLateLabel
{
	visibility: collapse;
	width: 100%;
	text-align: center;
}

.StateNothingScheduledForThisDivision #NoTournamentScheduledLabel
{
	visibility: visible;
}

.StartingLater #StartingTimeLongLabel
{
	visibility: visible;
}

.StateStartingSoon #StartingTimeShortLabel
{
	visibility: visible;
}

.StateNowOpen #NowOpenLabel
{
	visibility: visible;
}

.StateTooLate #TooLateLabel
{
	visibility: visible;
}

#StartingTimeRemainingLabel, #RegistrationTimeRemainingLabel
{
	visibility: collapse;
	width: 100%;
	text-align: center;
}

.StateStartingLater #StartingTimeRemainingLabel, .StateStartingSoon #StartingTimeRemainingLabel
{
	visibility: visible;
}
.StateNowOpen #RegistrationTimeRemainingLabel
{
	visibility: visible;
}

#NotInTourney
{
	flow-children: down;
	width: 100%;
	visibility: visible;
}

.StateInTourney #NotInTourney
{
	visibility: collapse;
}

#InTourney
{
	flow-children: down;
	width: 100%;
	visibility: collapse;
	visibility: collapse;
}

.StateInTourney #InTourney
{
	visibility: visible;
}

Button
{
	horizontal-align: center;
}

#TimeRemainingLabel
{
	horizontal-align: center;
}
