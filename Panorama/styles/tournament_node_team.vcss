TournamentNodeTeam
{
	flow-children:right;
	padding: 1px;
	width:100%;
}

TournamentNodeTeam Label, #UserName
{
	vertical-align: middle;
	margin-right: 2px;
	margin-top: 2px;
	height: 18px;
	color:#788a8a;
}

.TournamentNodeSizeMedium TournamentNodeTeam Label, .TournamentNodeSizeMedium #UserName
{
	height: 28px;
}

.TournamentnodeSizeHuge TournamentNodeTeam Label, .TournamentnodeSizeHuge #UserName
{
	height: 36px;
}

#TeamLogoContainer
{
	flow-children:none;
	width:20px;
	height:20px;
	margin: 1px 3px 1px 1px;
}

.TournamentNodeSizeMedium #TeamLogoContainer
{
	width: 30px;
	height: 30px;
}

.TournamentNodeSizeHuge #TeamLogoContainer
{
	width: 40px;
	height: 40px;
}

#TeamLogo
{
	width: 100%;
	height: 100%;
	visibility: collapse;
}

.TeamtypeOfficial #TeamLogo
{
	visibility: visible;
}

#TeamNameContainer
{
	width: fill-parent-flow( 1.0 );
}

#TeamName
{
	width: 100%;
}

.TeamTypeSinglePlayer #TeamName
{
	visibility: collapse;
}

#TeamScore
{
	width: 13px;
	text-align: right;
	margin-right: 4px;
	visibility: collapse;
}

TournamentNodeTeam.ScoreValid #TeamScore
{
	visibility: visible;
}

.ScoreSpoilerBlocked TournamentNodeTeam.ScoreValid #TeamScore
{
	visibility: collapse;
}

#UserName
{
	width: 100%;
	visibility: collapse;
}

#UserAvatar
{
	width: 100%;
	height: 100%;
	visibility: collapse;
}

.TeamTypeSinglePlayer #UserAvatar, .TeamTypeSinglePlayer #UserName
{
	visibility: visible;
}

.Spinner
{
	width: 70%;
	height: 70%;
	visibility: collapse;
	horizontal-align: center;
	vertical-align: center;
}

.TeamTypeSearching .Spinner
{
	visibility: visible;
}
