{
    font-size: 19px;
	letter-spacing: 1px;
	color: #8e9795;
    text-transform: uppercase;
    margin-left: 0px;
	font-weight: thinner;
	
}

.HeroOptionsTab:hover Label
{
    color: white;
}

.HeroOptionsTab:selected Label
{
    color: white;
}

