<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/banners/front_page_battlepass_upgrade.vcss_c" />
		<include src="s2r://panorama/styles/dashboard_page_home.vcss_c" />
	</styles>

	<CustomLayoutPanel>
		<Panel id="UpgradeBattlePassTopRight">
			<Label id="UpgradeBattlePassLabel" text="#dota_store_battle_pass_points_cell_header" />
			<Label id="PurchaseBattlePassLabel" text="#DOTA_TI6_BattlePass_Purchase" />
		</Panel>

		<Panel id="CurrentPrizePoolContainer" class="Hidden">
			<Label id="CurrentPrizePoolLabel" text="#DOTA_DB_SeasonPass_PrizePool" />
			<Label id="HomePagePrizePoolLabel" text="${i:prize_pool}" />
		</Panel>

		<Panel id="PurchaseUpgradeButtons">
			<Button id="PurchaseBattlePassButton" class="ButtonBevel" onactivate="DOTAMakeEventPurchase( EVENT_ID_INTERNATIONAL_2016 )">
				<Label text="#DOTA_TI6_BattlePass_Purchase" />
			</Button>
		
			<Button id="PurchaseLevelsButton" class="ButtonBevel" onactivate="DOTAPurchaseEventLevels( EVENT_ID_INTERNATIONAL_2016 )">
				<Label text="#DOTA_TI6_BattlePass_PurchaseLevels" />
			</Button>
		</Panel>

	</CustomLayoutPanel>
</root>
