<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/treasures/tribute_treasure_fall_2015.vcss_c" />
	</styles>

	<Panel class="RootPanel">
		<Panel id="Background">
			<Panel id="ImageBackground">
				<Image id="InfuserImage" src="s2r://panorama/images/compendium/infuser_png.vtex"/>
			</Panel>
			<Panel id="Contents">
				<Label id="Title" text="#DOTA_TributeTreasure_Title" />
				<Label id="Description" text="#DOTA_TributeTreasure_Description" />

				<ToggleButton id="PreviewInfuser" text="#DOTA_TributeTreasure_PreviewInfuser" onactivate="DOTATreasureTogglePreviewStyleUnlockItemDef( 16735 )" />
				
				<DOTAEventActionCount id="ActionCount" eventid="9" actionid="20" layoutfile="file://{resources}/layout/treasures/infuser_counter.xml" countdownmultiple="5" countdownmarkers="1" />
				<DOTAApplyInfuser id="ApplyInfuser" />
			</Panel>
		</Panel>
	</Panel>
</root>
