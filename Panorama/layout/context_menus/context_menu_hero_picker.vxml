<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/battle_pass/spring2016/bp_spring2016.vcss_c" />
		<include src="s2r://panorama/styles/context_menus/context_menu_hero_picker.vcss_c" />
	</styles>

	<DOTAContextMenuHeroPicker>

		<Panel id="HeaderRow">
			<Label id="SelectionChoice" text="{s:choose}"/>
			<Panel class="FillWidth" />
			<Panel id="HeroSearch" class="SearchBox">
				<TextEntry id="HeroSearchTextEntry" placeholder="#DOTA_Search" oninputsubmit="DOTAHeroPickerSearchSubmitted()" />
				<Button id="HeroSearchButton" />
			</Panel>
		</Panel>

		<Panel id="HeroList">
			<!-- Dynamic -->
		</Panel>
		
	</DOTAContextMenuHeroPicker>
</root>
