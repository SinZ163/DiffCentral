<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/purchase_button.vcss_c" />
	</styles>

	<PurchaseButton class="PurchaseItemButton">
		<Panel class="Contents">
			<Panel id="EventIcon" />
			<Label id="PurchaseMethod" text="{s:method}" />
			<Panel id="SourceIconContainer">
				<Panel id="SourceIconArrow" />
				<Panel id="SourceIcon" />
			</Panel>
			<Label id="SaleAmount" text="-%{d:sale_amount}" />
			<Label id="SaleRegularPrice" text="{m:regular_price}" />
			<Label id="Price" text="{m:price}" />
			<Label id="PurchaseSource" text="{s:source}" />
		</Panel>
	</PurchaseButton>
</root>
