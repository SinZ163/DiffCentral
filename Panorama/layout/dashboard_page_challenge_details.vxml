<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/dashboard_page_shared.vcss_c" />
		<include src="s2r://panorama/styles/dashboard_page_challenge_details.vcss_c" />
	</styles>

	<DOTAChallengeDetailsPage class="DashboardPage">

		<Panel id="Header">
			<Button class="PageTitle">
				<Label text="First Challenges"/>
			</Button>
			<Panel class="PageSubTitle">
				<Label text="In Progress"/>
			</Panel>
			<Panel class="CarouselContainer" id="ChallengePageSelector">
				<RadioButton selected="true" class="CarouselDot" group="Carousel" id="Carousel1" />
				<RadioButton class="CarouselDot" group="Carousel" id="Carousel2"  />
				<RadioButton class="CarouselDot" group="Carousel" id="Carousel3"  />
			</Panel>
		</Panel>

		<Panel id="ChallengeDetailsBackground" class="">
			<Panel id="ChallengePage1" class="ChallengePage LeftRightFlow">
				<Panel class="ChallengeMap TopBottomFlow">
					<Panel class="ChallengeSubHeader">
						<Label text="Training" />
					</Panel>
					<Panel class="ChallengeMapImage"/>
					<Panel class="ChallengeMapInfo TopBottomFlow">
						<Panel class="ChallengeLine">
							<Panel class="ChallengeDescription">
								<Label text="Win a Bot Match with Beastmaster"/>
							</Panel>
							<Panel class="ChallengeIcon ChallengeIconBox"/>
							<Panel class="ChallengeIcon ChallengeIconCheck"/>
						</Panel>
						<Panel class="ChallengeMapDescription">
							<Label text="Practice hurling your Wild Axes at waves and waves of enemies.  Successive shots earn you bonus points!  " />
						</Panel>
						<Button class="PlayGameButton">
							<Label text="Start Training" />
						</Button>
					</Panel>
				</Panel>
				<Panel class="ChallengeList TopBottomFlow">

					<Panel class="ChallengeSubHeader">
						<Label text="Challenges" />
					</Panel>

					<Panel class="ChallengeLine">
						<Panel class="ChallengeDescription">
							<Label text="Get one of the intial bounty runes"/>
						</Panel>
						<Panel class="ChallengeIcon ChallengeIconBox"/>
						<Panel class="ChallengeIcon ChallengeIconCheck"/>
					</Panel>

					<Panel class="ChallengeLine">
						<Panel class="ChallengeDescription">
							<Label text="Deploy a courier"/>
						</Panel>
						<Panel class="ChallengeIcon ChallengeIconBox"/>
						<Panel class="ChallengeIcon ChallengeIconCheck"/>
					</Panel>

					<Panel class="ChallengeLine">
						<Panel class="ChallengeDescription">
							<Label text="Upgrade a courier"/>
						</Panel>
						<Panel class="ChallengeIcon ChallengeIconBox"/>
						<Panel class="ChallengeIcon ChallengeIconCheck"/>
					</Panel>

					<Panel class="ChallengeLine Incomplete">
						<Panel class="ChallengeDescription">
							<Label text="Get first blood"/>
						</Panel>
						<Panel class="ChallengeIcon ChallengeIconBox"/>
						<Panel class="ChallengeIcon ChallengeIconCheck"/>
					</Panel>

					<Panel class="ChallengeLine">
						<Panel class="ChallengeDescription">
							<Label text="Buy an item from each secret shop"/>
						</Panel>
						<Panel class="ChallengeIcon ChallengeIconBox"/>
						<Panel class="ChallengeIcon ChallengeIconCheck"/>
					</Panel>

					<Panel class="ChallengeLine">
						<Panel class="ChallengeDescription">
							<Label text="Buy an item from the secret shop with a courier"/>
						</Panel>
						<Panel class="ChallengeIcon ChallengeIconBox"/>
						<Panel class="ChallengeIcon ChallengeIconCheck"/>
					</Panel>

					<Panel class="ChallengeLine Incomplete">
						<Panel class="ChallengeDescription">
							<Label text="Get the last hit on a tower"/>
						</Panel>
						<Panel class="ChallengeIcon ChallengeIconBox"/>
						<Panel class="ChallengeIcon ChallengeIconCheck"/>
					</Panel>

					<Panel class="ChallengeLine Incomplete">
						<Panel class="ChallengeDescription">
							<Label text="Play 5 games while in a party"/>
						</Panel>
						<Panel class="ChallengeIcon ChallengeIconBox"/>
						<Panel class="ChallengeIcon ChallengeIconCheck"/>
					</Panel>

					<Panel class="ChallengeLine Incomplete">
						<Panel class="ChallengeDescription">
							<Label text="Get an assist or kill within 10 seconds of teleporting"/>
						</Panel>
						<Panel class="ChallengeIcon ChallengeIconBox"/>
						<Panel class="ChallengeIcon ChallengeIconCheck"/>
					</Panel>

				</Panel>
			</Panel>
		</Panel>
		<DOTAScenePanel id="BeastMasterModel" unit="npc_dota_hero_beastmaster" allowrotation="true" drawbackground="false"  hittest="false"/>
	</DOTAChallengeDetailsPage>
</root>
