<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
		<include src="s2r://panorama/styles/popups/popup_seasonal_item_received.vcss_c" />
	</styles>

	<PopupItemReceived class="PopupPanel Hidden RarityArcana" popupbackground="dim" oncancel="DOTAItemReceivedAcceptClicked( true )">
		<DOTAScenePanel id="BackgroundFXLarge" map="scenes/item_received" camera="shot_camera"/>
		<Panel id="MainSectionContainer" class="LeftRightFlow">
			<Panel id="Body">
				<DOTAScenePanel id="BackgroundFXWindow" map="scenes/item_received" camera="shot_camera"/>
				<Label id="ItemPanelTitle" class="PopupTitle" text="#DOTA_SeasonPass_Seasonal_Reward" />
				<Label id="ItemPanelSubTitle" class="PopupSubTitle" text="#DOTA_SeasonPass_Seasonal_Reward_Subtitle" />
				<Panel id="IconContainer" hittest="false">
					<Panel class="ReceivedItemIcon">
						<Image id="MainImage" />
					</Panel>
				</Panel>
				<Panel id="ItemContainer">
					<Panel id="HorizontalBand">
						<Label id="ItemName" class="PopupTitle" text="{s:item_name}" />
					</Panel>
				</Panel>

				<Panel class="PopupButtonRow">
					<Button class="PopupButton" onactivate="RemoveStyle( IconContainer, StartAnim ); AddStyle( IconContainer, StartAnim ); UIPopupButtonClicked()">
						<Label text="#DOTA_Popup_Item_Received_Button_Accept" />
					</Button>
				</Panel>
			</Panel>
		</Panel>
	</PopupItemReceived>
</root>
