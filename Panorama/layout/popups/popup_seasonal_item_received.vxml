<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
		<include src="s2r://panorama/styles/popups/popup_seasonal_item_received.vcss_c" />
	</styles>

	<PopupItemReceived class="PopupPanel Hidden RarityArcana" popupbackground="dim" oncancel="DOTAItemReceivedAcceptClicked( true )">
		<DOTAScenePanel id="BackgroundFXLarge" map="scenes/item_received" camera="shot_camera"/>
		<Panel id="MainSectionContainer" class="LeftRightFlow">
			<Panel id="Body">
				<DOTAScenePanel id="BackgroundFXWindow" map="scenes/item_received" camera="shot_camera"/>
				<Label id="ItemPanelTitle" class="PopupTitle" text="#DOTA_SeasonPass_Seasonal_Reward" />
				<Panel id="IconContainer" hittest="false">
					<Panel class="ReceivedItemIcon">
						<Image id="MainImage" class="DisableInspect DisableEquipped" />
					</Panel>
				</Panel>
				<Panel id="ItemContainer">
					<Panel id="HorizontalBand" class="ShowGroupMemberNames HideEmptyGroupMembers">
						<Label id="ItemName" class="PopupTitle" text="{s:item_name}" />
						<Label id="ItemDescription" text="{s:item_description}" class="Hide" />
					</Panel>
          <Panel class="OptionsButtonRow LeftRightFlow">
            <ToggleButton id="EquipButton" class="ButtonDark Hide">
              <Label text="Equip Item" />
            </ToggleButton>
            <Button class="ButtonDark Hide">
              <Label text="Preview Item" />
            </Button>
          </Panel>
					<Label id="AdditionalMessage" text="Use this space for additional messaging, ie Compendium Drop etc." hittest="false"/>
				</Panel>

				<Panel class="PopupButtonRow">
					<Button class="PopupButton" onactivate="RemoveStyle( IconContainer, StartAnim ); AddStyle( IconContainer, StartAnim ); UIPopupButtonClicked()">
						<Label text="#DOTA_Popup_Item_Received_Button_Accept" />
					</Button>
        <Button id="MysteryButton" class="PopupButton" onactivate="RemoveStyle( IconContainer, StartAnim ); AddStyle( IconContainer, StartAnim ); UIPopupButtonClicked(); DOTAPopupGoToWheel(); ">
						<Label text="#DOTA_Popup_Go_To_Wheel" />
					</Button>
				</Panel>
      <Panel class="ItemOptions">
					<Panel class="LeftRightFlow Hide">
						<ToggleButton id="AddToJunk" text="Mark as Junk" />
						<Panel class="InfoIcon" onmouseout="UIHideTextTooltip();" onmouseover="UIShowTextTooltip( You can change this later from the Armory );" />
					</Panel>
				</Panel>
			</Panel>
		</Panel>
	</PopupItemReceived>
</root>
	