<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
		<include src="s2r://panorama/styles/popups/popup_matchmaking_language.vcss_c" />
	</styles>

  <PopupMatchmakingLanguage class="Hidden PopupPanel" defaultfocus="TestContainer" popupbackground="dim" >

    <Panel class="TopBottomFlow LanguageContainer">
      <Label text="#dota_matchmaking_language_title" class="DialogTitle PopupTitle" />

      <Panel id="PrimaryLanguageContainer">
        <Label class="PrimaryLanguageLabel PrimaryLanguageValid" text="#dota_matchmaking_language_primary_label"  />
        <Label id="PrimaryLanguage" class="PrimaryLanguageLabel PrimaryLanguageValid" text="#dota_matchmaking_language_primary"  />
        <Label class="PrimaryLanguageLabel PrimaryLanguageInvalid" text="#dota_matchmaking_language_primary_invalid" />
      </Panel>

      <Label class="SettingTitle PrimaryLanguageValid" text="#dota_matchmaking_language_select_secondary"  />
      <Label class="SettingTitle PrimaryLanguageInvalid" text="#dota_matchmaking_language_select_primary" />

      <DropDown id="LanguageDropdown" />
    </Panel>

    <Panel class="ButtonFooter">
      <Button id="OKButton" class="PopupButton" onactivate="UIPopupButtonClicked( DOTAMatchmakingLanguageApply() )">
        <Label text="#UI_OK"/>
      </Button>      
      <Button id="CancelButton" class="PopupButton" onactivate="UIPopupButtonClicked()">
        <Label text="#UI_Cancel" />
      </Button>		
    </Panel>
    
  </PopupMatchmakingLanguage>
</root>
