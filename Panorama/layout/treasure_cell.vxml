<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/treasures_shared.vcss_c" />
		<include src="s2r://panorama/styles/treasure_cell.vcss_c" />
	</styles>

	<DOTATreasureCell>

		<Panel id="TreasureBackground">
			<EconItemImage id="TreasureImage" scaling="stretch-to-fit-preserve-aspect" />

			<Panel id="TreasureSeason">
				<Label id="TreasureSeasonLabel" text="{s:season_name}" />
			</Panel>
			
			<Panel id="TreasuryTopTint" />

			<Panel id="OwnedTreasuresCount">
				<Panel class="OwnedTreasuresCountContents">
					<Panel class="OwnedTreasuresCountRow">
						<Panel id="OwnedTreasuresIcon" />
						<Label text="#DOTA_Treasure_OpenQuantity" />
					</Panel>
					<Label id="OwnedTreasuresLabel" text="#DOTA_Treasure_Owned" />
				</Panel>
			</Panel>
		</Panel>

		<Panel id="TreasureDetails">
			<Panel id="TreasureHeader" >
				<Label id="TreasureName" text="{g:dota_item_name:treasure_item_def}" />
				<Panel id="TreasurePrice">
					<Label id="TreasurePriceLabel" text="{s:treasure_price}" />
					<Panel id="TreasureCurrencyIcon" />
					<Panel id="TreasureMarketIcon" />
					<Panel id="TreasureEventIcon" />
				</Panel>
			</Panel>

			<Panel id="TreasureContents" class="TreasureItemsSection">
				<Label id="TreasureContentsTitle" text="#DOTA_Treasure_HelpHeader" />
				<Panel id="TreasureItems" class="TreasureItemsList" />
			</Panel>

			<Panel id="TreasureRares" class="TreasureItemsSection">
				<Label id="TreasureRaresTitle" text="#DOTA_OpenTreasureTooltip_RareTitle" />
				<Panel id="TreasureRareItems" class="TreasureItemsList" />
			</Panel>
		</Panel>
		
	</DOTATreasureCell>
</root>
