<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/recent_armory_items_menu.vcss_c" />
	</styles>

	<DOTARecentArmoryItemsMenu>
		<Panel id="ItemsContainer">
			<Label id="MenuHeader" text="#DOTA_RecentArmoryItems_Header" />
			<Panel id="ItemsList" sendchildscrolledintoviewevents="true">
				<Panel id="NewItemsCategory" class="ItemCategory" sendchildscrolledintoviewevents="true">
					<Label class="CategoryHeader" text="#DOTA_RecentArmoryItems_Title_New" />
					<Panel id="NewItemsList" class="ItemList" sendchildscrolledintoviewevents="true">
						<!-- Dynamic list of DOTARecentArmoryItem -->
					</Panel>
				</Panel>
				<Panel id="RecentItemsCategory" class="ItemCategory" sendchildscrolledintoviewevents="true">
					<Label class="CategoryHeader" text="#DOTA_RecentArmoryItems_Title_Recent" />
					<Panel id="RecentItemsList" class="ItemList" sendchildscrolledintoviewevents="true">
						<!-- Dynamic list of DOTARecentArmoryItem -->
					</Panel>
				</Panel>
			</Panel>
		</Panel>
		<Panel id="EmptyContainer">
			<Label id="EmptyTitle" text="DOTA_RecentArmoryItems_EmptyTitle" />
			<Label id="EmptyMessage" text="DOTA_RecentArmoryItems_EmptyMessage" />
		</Panel>
	</DOTARecentArmoryItemsMenu>
</root>
