<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/hero_card.vcss_c" />
	</styles>

	<DOTAHeroCard hittest="false">

		<Panel id="Contents" hittest="false">
			
			<DOTAHeroImage id="HeroImage" hittest="false" />

			<Panel id="HeroMovie" hittest="false" >
				<!-- MoviePanel is allocated on demand -->
			</Panel>

			<Label id="HeroName" hittest="false" />
		</Panel>

		<Panel id="HitTarget"
			   onmouseover="$( '#HitTarget' ).GetParent().AddClass( 'Expanded' )"
			   onmouseout="$( '#HitTarget' ).GetParent().RemoveClass( 'Expanded' )" />

	</DOTAHeroCard>

</root>
