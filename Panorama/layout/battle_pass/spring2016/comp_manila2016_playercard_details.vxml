<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/dashboard_page_shared.vcss_c" />
		<include src="s2r://panorama/styles/battle_pass/spring2016/comp_manila2016_pages.vcss_c" />
	</styles>

	<script>
	</script>

	<DOTACompManila2016PlayerCardDetailsPage class="DashboardPage" hittest="false">
		<Panel id="CompendiumBody" class="CompendiumBody">
			<Panel id="PlayerCardDetailsContainer">
				<Panel id="TopPlayerCardSection" class="LeftRightFlow">
					<Panel id="PlayerCardCarouselContainer" class="TopBottomFlow">
						<Panel class="LeftRightFlow">
							<Button id="PageLeftButton" class="PaginationArrow Left" onactivate="MovePanelLeft( CardCarousel, 1 )" />
							<Carousel id="CardCarousel" class="SingleItemCarousel" panels-visible="1"></Carousel>
							<!-- dynamically filled with cards -->
							<Button id="PageRightButton" class="PaginationArrow Right" onactivate="MovePanelRight( CardCarousel, 1 )" />
						</Panel>
						<Button id="RecycleButton" class="BlueButton" onactivate="DOTARecyclePlayerCard()"><Label text="Recycle Card"/></Button>
					</Panel>
					
					<Panel id="StatsContainer">
						<Label text="Some stats here, maybe spider graph?"/>
					</Panel>
				</Panel>
				<Panel id="BottomPlayerCardSection" class="TopBottomFlow">
					<Panel id="MatchesContainer">
						<Label text="Match list here?"/>
					</Panel>
				</Panel>
			</Panel>
		</Panel>		
	</DOTACompManila2016PlayerCardDetailsPage>
</root>
