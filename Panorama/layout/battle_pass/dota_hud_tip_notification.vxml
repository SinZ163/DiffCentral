<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/battle_pass/dota_hud_tips_received.vcss_c" />
	</styles>

	<DOTATipNotification onactivate="DOTADismissTipNotification()">
		<Panel class="TipPlayer">
			<DOTAHeroImage id="TippingHeroImage" heroimagestyle="icon" />
			<Label text="{s:tipping_player_name}" />
		</Panel>

		<Label class="TippedText" text="#DOTA_TipNotification" />

		<Panel class="TipPlayer">
			<DOTAHeroImage id="RecipientHeroImage" heroimagestyle="icon" />
			<Label text="{s:recipient_player_name}" />
		</Panel>
	</DOTATipNotification>
</root>
