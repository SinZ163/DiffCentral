<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/battle_pass/current_battle_pass.vcss_c" />
		<include src="s2r://panorama/styles/battle_pass/dota_hud_ingame_predictions_container.vcss_c" />
	</styles>

	<DOTAIngamePredictionsContainer hittest="false">
		<Button class="PulloutTab" onactivate="DOTAToggleIngamePredictions();">
			<Panel class="BattlePassLogo" scaling="stretch-to-fit-preserve-aspect" />
            <Panel class="PanelSlideThumbArrow" />
        </Button>
		<Panel class="InGamePredictionsRight" acceptsinput="true">
			<Panel class="InGamePredictionTitle" >
				<Label class="PredictionTitle" text="#DOTA_InGamePrediction_Title" />
				<Label class="VotingOpenTitle VotingState" text="#DOTA_InGamePrediction_VotingIsOpen" />
				<Label class="VotingClosedTitle VotingState" text="#DOTA_InGamePrediction_VotingIsClosed" />
			</Panel>
			<!-- This is dynamically filled with all in-game predictions -->
			<Panel id="InGamePredictions" />
		</Panel>
	</DOTAIngamePredictionsContainer>
</root>


