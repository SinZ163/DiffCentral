<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/spectator_lobby_create.vcss_c" />
	</styles>
		
	<DOTASpectatorLobbyCreate>

		<Label class="Title" text="Create a Lobby" />

		<Button id="PublicButton" class="CreateLobbyButton" onactivate="DOTACreateDefaultSpectatorLobby( true )">
			<Label class="ButtonTitle" text="Public" />
			<Label class="ButtonDescription" text="Anyone can join this lobby to watch Dota with you." />
		</Button>

		<Button id="PrivateButton" class="CreateLobbyButton" onactivate="DOTACreateDefaultSpectatorLobby( false )">
			<Label class="ButtonTitle" text="Private" />
			<Label class="ButtonDescription" text="Only players who know the password can watch Dota with you." />
		</Button>

	</DOTASpectatorLobbyCreate>

</root>
