<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
	    <include src="s2r://panorama/styles/battle_pass/current_battle_pass.vcss_c" />
	    <include src="s2r://panorama/styles/tooltips/tooltip_challenge.vcss_c" />
	    <include src="s2r://panorama/styles/battle_pass/spring2016/bp_spring2016.vcss_c" />
	</styles>

	<DOTATooltipChallenge class="TitleImageTextContents">
		<Image id="Image" scaling="stretch-to-fit-preserve-aspect"/>

		<Panel id="ChallengeHeader">
			<Label id="TitleLabel" html="true" />
		</Panel>	


		<Panel class="TopBottomFlow">
			<Panel class="SectionTitleBar"/>
			<Label id="NumGamesLabel" html="true" />
			<Label id="TextLabel" html="true" />
			<Label id="LoreLabel" text="Lorem ipsum" html="true" />
			<ProgressBar id="ChallengeProgress">
            </ProgressBar>
            <Label id= "ChallengeProgressLabel" text="#DOTA_Tooltip_Challenge_Progress" html="true"/>
			<Panel id="HeroInfo">
				<Panel id="RequiredHero" class="LeftRightFlow HideRequiredHero">
					<Label id="RequiredHeroLabel" text="#DOTA_Challenge_Requires_Hero"/>
					<Panel class="XPCircle">
						<Label id="Unknown" text="?"/>
						<DOTAHeroImage id="RequiredHeroIcon" heroimagestyle="icon" scaling="stretch-to-fit-preserve-aspect"/>
					</Panel>
				</Panel>
			</Panel>
		</Panel>

		<Panel id="StarCompletion">
			<Panel id="CompletedBar">
				<Label text="#DOTA_Compendium_Wagering_TotalPointsWon" class="CompletedBannerText"/>
			</Panel>
			<Panel id="PointsBars" class="LeftRightFlow TooltipStars">
				<Panel id="StarRank1" class="StarStack TopBottomFlow">
					<Panel class="Star"/>
					<Label text="{d:xp_amount1}"/>
				</Panel>
				<Panel id="StarRank2" class="StarStack TopBottomFlow">
					<Panel class="Star"/>
					<Label text="{d:xp_amount2}"/>
				</Panel>
				<Panel id="StarRank3" class="StarStack TopBottomFlow">
					<Panel class="Star"/>
					<Label text="{d:xp_amount3}"/>
				</Panel>
			</Panel>
		</Panel>
			
		
	</DOTATooltipChallenge>
</root>
