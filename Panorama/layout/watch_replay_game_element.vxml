<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/watch_replay_game_element.vcss_c" />
	</styles>

	<DOTAWatchReplayGameElement class="WatchReplayGameElement" >

		<Panel class="ElementContainer" acceptsinput="true">
			
			<Panel id="PendingSpinner"><Panel class="Spinner"/></Panel>
			<Panel class="InfoContainer">

				<Panel class="VsContainer">

					<Panel id="TeamRadiant" >
						<DOTAUGCImage id="LogoRadiant" class="Logo"/>
						<Label id="TeamNameRadiant" text="{s:team_1}" html="true"/>
					</Panel>
					<Panel id="HeroesRadiant" class="Heroes">
						<Image id="HeroRadiant1" class="Hero" scaling="stretch-to-cover-preserve-aspect" />
						<Image id="HeroRadiant2" class="Hero" scaling="stretch-to-cover-preserve-aspect" />
						<Image id="HeroRadiant3" class="Hero" scaling="stretch-to-cover-preserve-aspect" />
						<Image id="HeroRadiant4" class="Hero" scaling="stretch-to-cover-preserve-aspect" />
						<Image id="HeroRadiant5" class="Hero" scaling="stretch-to-cover-preserve-aspect" />
					</Panel>

					<Label id="vs" text="#vs"/>

					<Panel id="TeamDire" >
						<DOTAUGCImage id="LogoDire" class="Logo"/>
						<Label id="TeamNameDire" text="{s:team_2}" html="true"/>
					</Panel>
					<Panel id="HeroesDire" class="Heroes">
						<Image id="HeroDire1" class="Hero" scaling="stretch-to-cover-preserve-aspect" />
						<Image id="HeroDire2" class="Hero" scaling="stretch-to-cover-preserve-aspect" />
						<Image id="HeroDire3" class="Hero" scaling="stretch-to-cover-preserve-aspect" />
						<Image id="HeroDire4" class="Hero" scaling="stretch-to-cover-preserve-aspect" />
						<Image id="HeroDire5" class="Hero" scaling="stretch-to-cover-preserve-aspect" />
					</Panel>

				</Panel>

				<Panel class="DetailsContainer">
					<Panel id="Participants">
						<Label id="Friends1" text="#DOTA_WatchReplays_Friends1" html="true"/>
						<Label id="Friends2" text="#DOTA_WatchReplays_Friends2" html="true"/>
						<Label id="Friends3Plus" text="#DOTA_WatchReplays_Friends3Plus" html="true"/>
					</Panel>
					<Label id="LeagueName" text="{s:league_name}"/>
					<Panel id="Recommendations">
						<Label id="RecommendationsText3Plus" text="#DOTA_WatchReplays_Recommendations3Plus" html="true"/>
						<Label id="RecommendationsText2" text="#DOTA_WatchReplays_Recommendations2" html="true"/>
						<Label id="RecommendationsText1" text="#DOTA_WatchReplays_Recommendations1" html="true"/>
						<Label id="RecommendationsText" text="#DOTA_WatchReplays_Recommendations" html="true"/>
						<Image id="RecommendationsThumb" src="s2r://panorama/images/control_icons/thumbs_up_png.vtex"/>
					</Panel>
					<Label id="Views" text="#DOTA_WatchReplays_Views"/>

					<Label id="PublicMatchInfo" text="#DOTA_WatchReplays_MatchType_Public" html="true"/>
					
					<Label id="Timestamp" text="{t:s:t:timestamp}"/>
				</Panel>

			</Panel>

			<Image id="DownloadingIcon" class="BottomLeftIcon" />
			<Image id="DownloadedIcon" class="BottomLeftIcon" />
			<Image id="WatchedIcon" class="BottomLeftIcon" />
			<Panel id="PurchaseButton">
				<Label id="PurchasePrice" text="{g:dota_item_price:ticket_itemdef}"/>
			</Panel>
		</Panel>    
	</DOTAWatchReplayGameElement>

</root>
