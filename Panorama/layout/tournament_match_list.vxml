<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/dashboard.vcss_c" />
		<include src="s2r://panorama/styles/tournament_match_list.vcss_c" />
	</styles>
	
	<TournamentMatchList>
		<Panel id="DayButtons">
			<RadioButton id="ButtonDay0" class="DayButton" onactivate="DOTATournamentMatchListShowScheduleDay( 0 )">
