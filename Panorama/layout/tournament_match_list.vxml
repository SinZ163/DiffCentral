				<Label id="LabelDayOfMonth0" class="DayOfMonth" text="{i:day_of_month}"/>
			</RadioButton>
			<RadioButton id="ButtonDay1" class="DayButton" onactivate="DOTATournamentMatchListShowScheduleDay( 1 )">
