<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/store_item.vcss_c" />
	</styles>

	<DOTAStoreItem>
		<EconItemImage id="ItemImage" scaling="stretch-to-fit-preserve-aspect" />
		<Label id="ItemName" text="{g:dota_item_name:item_def}" />

		<Panel class="FillHeight" />

		<Panel id="ItemType">
			<Panel id="UnitIcon">
				<DOTAHeroImage id="HeroIcon" heroname="npc_dota_hero_templar_assassin" heroimagestyle="icon" scaling="stretch-to-fit-preserve-aspect" onmouseout="DOTAHideHeroStatsTooltip()"/>
				<Panel id="ItemTypeIcon" onmouseout="UIHideTextTooltip()"/>
			</Panel>
			<Label id="ItemTypeLabel" text="{s:item_type}" />
		</Panel>

		<Panel class="FillHeight" />

		<DOTAPurchaseButton id="PurchaseButton" class="HidePurchaseMethod HideSaleAmount HideSaleRegularPrice" />
	</DOTAStoreItem>

</root>
