<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/store_item.vcss_c" />
	</styles>

	<DOTAStoreItem>
		<DOTAEconItemImage id="ItemImage" scaling="stretch-to-fit-preserve-aspect" />
		<Label id="ItemName" text="{g:dota_item_name:item_def}" />
		<Label id="ItemType" text="{s:item_type}" />
		<Label id="ItemPrice" text="{g:dota_item_price:item_def}" />
		<Panel id="Filler" />
		<Button id="PurchaseButton" onactivate="DOTAPurchaseIndividualStoreItem()">
			<Label  text="{g:dota_item_price:item_def}" />
		</Button>
	</DOTAStoreItem>

</root>
